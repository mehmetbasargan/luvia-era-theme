<div id="cart-drawer" class="fixed inset-0 z-[100] invisible overflow-hidden">
  <div
    id="cart-drawer-overlay"
    class="absolute inset-0 bg-black/30 opacity-0 transition-opacity duration-500 ease-in-out"
  ></div>

  <div
    id="cart-drawer-content"
    class="absolute right-0 top-0 h-full w-full max-w-[400px] bg-white translate-x-full transition-transform duration-500 ease-out p-8 shadow-2xl flex flex-col"
  >
    <div class="flex justify-between items-center pb-6 border-b border-gray-100">
      <h2 class="text-[12px] uppercase tracking-[0.3em] font-light text-primary">Sepetim</h2>
      <button
        onclick="closeCartDrawer()"
        class="text-[10px] uppercase tracking-widest hover:opacity-50 transition-opacity"
      >
        Kapat
      </button>
    </div>

    <div id="cart-drawer-items" class="flex-grow overflow-y-auto py-6 space-y-6">
      <button onclick="removeCartItem(${item.key})" class="text-[9px] uppercase tracking-tighter text-red-800 mt-2">
        Kaldır
      </button>
    </div>

    <div class="border-t border-gray-100 pt-6 mt-auto">
      <div class="flex justify-between items-center mb-6">
        <span class="text-[10px] uppercase tracking-widest text-secondary">Toplam</span>
        <span id="cart-total-price" class="text-sm font-light tracking-wider">0.00 TL</span>
      </div>
      <a
        href="/checkout"
        class="block w-full bg-[#3B443C] text-white py-4 text-center text-[11px] uppercase tracking-[0.3em] hover:bg-[#2A312B] transition-all"
      >
        ÖDEMEYE GEÇ
      </a>
    </div>
  </div>
</div>
