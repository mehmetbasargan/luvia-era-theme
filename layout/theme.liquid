<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
      <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
    {%- endif -%}

    {%- assign heading_font = settings.heading_font -%}
    {%- assign body_font = settings.body_font -%}

    <style>
      {{ heading_font | font_face: font_display: 'swap' }}
      {{ body_font | font_face: font_display: 'swap' }}

      :root {
        --color-primary: {{ settings.primary_color }};
        --color-secondary: {{ settings.secondary_color }};
        --color-custombg: {{ settings.custom_bg_color }};
        --color-line: {{ settings.line_color }};
        --color-white: #ffffff;
        --color-black: #000000;

        --font-heading: {{ heading_font.family }}, {{ heading_font.fallback_families }};
        --font-body: {{ body_font.family }}, {{ body_font.fallback_families }};
      }

      body {
        background-color: var(--color-white);
        color: var(--color-primary);
        font-family: var(--font-body);
        margin: 0;
        -webkit-font-smoothing: antialiased;
        display: block !important;
        opacity: 1 !important;
        transition: none !important;
      }

      h1, h2, h3, h4, h5, h6, .font-heading {
        font-family: var(--font-heading);
      }
    </style>

    {{ content_for_header }}

    {% # BURAYI GÜNCELLEDİM: Dosya ismini terminaldeki çıktıya (tailwind.output.css) göre ayarladım ve cache-buster ekledim %}
    <link rel="stylesheet" href="{{ 'tailwind.output.css' | asset_url }}&v={{ "now" | date: "%N" }}">

    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    <div
      id="toast-container"
      class="fixed bottom-10 left-1/2 -translate-x-1/2 z-[200] space-y-2 pointer-events-none"
    ></div>

    {% sections 'header-group' %}
    {% render 'cart-drawer' %}

    <script>
      window.customer = {% if customer %}{{ customer | json }}{% else %}false{% endif %};
    </script>

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>
    <script>
      const WishlistManager = {
        key: 'luvia_era_wishlist',

        get: function () {
          return JSON.parse(localStorage.getItem(this.key)) || [];
        },

        toggle: function (id) {
          let list = this.get();
          const index = list.indexOf(id.toString());
          if (index > -1) {
            list.splice(index, 1);
          } else {
            list.push(id.toString());
          }
          localStorage.setItem(this.key, JSON.stringify(list));
          this.updateAllIcons(); // Tüm sayfadaki ikonları senkronize et
          return index === -1;
        },

        updateAllIcons: function () {
          const list = this.get();
          document.querySelectorAll('.custom-wishlist-btn').forEach((btn) => {
            const id = btn.getAttribute('data-id');
            const svg = btn.querySelector('svg');
            if (list.includes(id.toString())) {
              svg.setAttribute('fill', 'currentColor');
              svg.classList.add('text-secondary');
            } else {
              svg.setAttribute('fill', 'none');
              svg.classList.remove('text-secondary');
            }
          });
        },
      };

      // --- TIKLAMA YÖNETİCİSİ (Linke gitmeyi engeller) ---
      document.addEventListener(
        'click',
        function (e) {
          const btn = e.target.closest('.custom-wishlist-btn');
          if (btn) {
            e.preventDefault();
            e.stopPropagation();
            const productId = btn.getAttribute('data-id');
            WishlistManager.toggle(productId);
          }
        },
        true
      );

      // Sayfa ilk açıldığında ikonları boya
      document.addEventListener('DOMContentLoaded', () => WishlistManager.updateAllIcons());
      // Arama sonuçları gibi dinamik içerikler için her saniye kontrol (Opsiyonel ama garanti)
      setInterval(() => WishlistManager.updateAllIcons(), 1000);
    </script>
  </body>
</html>
