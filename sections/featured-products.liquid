<div class="cotainer">
  <section class="bg-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h2 class="text-[#3B443C] text-2xl font-light tracking-widest uppercase">
            {{ section.settings.section_title }}
          </h2>
          <p class="text-gray-400 text-xs mt-2 uppercase tracking-widest">{{ section.settings.section_subtitle }}</p>
        </div>
        {% if section.settings.button_url %}
          <a
            href="{{ section.settings.button_url }}"
            class="text-[#3B443C] text-xs border-b border-[#3B443C] pb-1 hover:text-[#B2AC88] hover:border-[#B2AC88] transition-all"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-12">
        {% for product in collections[section.settings.collection].products limit: 4 %}
          <div class="group relative">
            <div class="relative aspect-[3/4] overflow-hidden bg-[#F9F9F9]">
              {% if product.compare_at_price > product.price %}
                <span class="absolute top-4 left-4 z-20 bg-[#B2AC88] text-white text-[10px] px-3 py-1 tracking-widest uppercase"
                  >İndirim</span
                >
              {% endif %}

              <a href="{{ product.url }}" class="block w-full h-full">
                <img
                  src="{{ product.featured_image | image_url: width: 700 }}"
                  height=""
                  width=""
                  class="w-full h-full object-cover absolute inset-0 transition-opacity duration-700 z-0 {% if product.images[1] %}group-hover:opacity-0{% endif %}"
                  alt="{{ product.title }}"
                >

                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 700 }}"
                    height=""
                    width=""
                    class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 z-0"
                    alt="{{ product.title }}"
                  >
                {% endif %}
              </a>

              <div class="absolute inset-x-0 bottom-0 translate-y-full group-hover:translate-y-0 transition-transform duration-300 z-30">
                {%- assign product_form_id = 'section-product-form-'
                  | append: section.id
                  | append: '-'
                  | append: product.id
                -%}

                {% form 'product', product, id: product_form_id %}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <input type="hidden" name="quantity" value="1">

                  <button
                    type="submit"
                    name="add"
                    class="w-full cursor-pointer bg-[#3B443C]/90 text-white py-4 text-xs uppercase tracking-[0.2em] hover:bg-[#3B443C] transition-colors"
                    {% unless product.available %}
                      disabled
                    {% endunless %}
                  >
                    {% if product.available %}
                      Add to Cart
                    {% else %}
                      Sold Out
                    {% endif %}
                  </button>
                {% endform %}
              </div>
            </div>

            <div class="mt-6 text-center">
              <a href="{{ product.url }}">
                <h3 class="text-[#3B443C] text-sm font-light tracking-wide">{{ product.title }}</h3>
                <div class="mt-2 flex justify-center items-center gap-3">
                  {% if product.compare_at_price > product.price %}
                    <span class="text-gray-400 line-through text-xs">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="text-[#3B443C] text-sm font-medium">{{ product.price | money }}</span>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
</div>

{% schema %}
{
  "name": "Öne Çıkan Ürünler",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Sergilenecek Koleksiyonu Seç"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Bölüm Başlığı"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Bölüm Alt Başlığı"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Buton Metni"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Buton URL"
    }
  ],
  "presets": [
    {
      "name": "Luvia Featured Collection"
    }
  ]
}
{% endschema %}
