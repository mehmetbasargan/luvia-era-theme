<div class="cotainer">
  <section class="bg-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h4 class="text-primary font-light tracking-widest uppercase">
            {{ section.settings.section_title }}
          </h4>
          <p class="text-primary mt-2 text-xs font-ligh uppercase tracking-widest">
            {{ section.settings.section_subtitle }}
          </p>
        </div>
        {% if section.settings.button_url %}
          <a
            href="{{ section.settings.button_url }}"
            class="text-primary border-b border-line pb-1 hover:text-secondary hover:border-secondary transition-all"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-12">
        {% for product in collections[section.settings.collection].products limit: 4 %}
          <div class="group relative">
            <div class="relative aspect-[3/4] overflow-hidden bg-custombg">
              {% if product.compare_at_price > product.price %}
                <span class="absolute top-4 left-4 z-20 bg-secondary text-white font-medium text-[12px] px-3 py-1 tracking-widest uppercase">
                  {{ 'products.product.on_sale' | t }}
                </span>
              {% endif %}

              <a href="{{ product.url }}" class="block w-full h-full">
                <img
                  src="{{ product.featured_image | image_url: width: 700 }}"
                  height=""
                  width=""
                  class="w-full h-full object-cover absolute inset-0 transition-opacity duration-700 z-0 {% if product.images[1] %}group-hover:opacity-0{% endif %}"
                  alt="{{ product.title }}"
                >

                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 700 }}"
                    height=""
                    width=""
                    class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 z-0"
                    alt="{{ product.title }}"
                  >
                {% endif %}
              </a>

              <div class="absolute inset-x-0 bottom-0 translate-y-full group-hover:translate-y-0 transition-transform duration-300 z-30">
                {%- assign product_form_id = 'section-product-form-'
                  | append: section.id
                  | append: '-'
                  | append: product.id
                -%}

                {% form 'product', product, id: product_form_id %}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <input type="hidden" name="quantity" value="1">

                  <button
                    type="submit"
                    name="add"
                    class="w-full cursor-pointer bg-primary text-white font-medium py-4 text-xs uppercase tracking-[0.2em] hover:bg-secondary transition-colors"
                    {% unless product.available %}
                      disabled
                    {% endunless %}
                  >
                    {% if product.available %}
                      {{ 'products.product.add_to_cart' | t }}
                    {% else %}
                      {{ 'products.product.sold_out' | t }}
                    {% endif %}
                  </button>
                {% endform %}
              </div>
            </div>

            <div class="mt-6 text-center">
              <a href="{{ product.url }}">
                <h3 class="text-secondary text-[18px] font-medium tracking-wide">{{ product.title }}</h3>
                <div class="mt-2 flex justify-center items-center gap-3">
                  {% if product.compare_at_price > product.price %}
                    <span class="text-gray-400 line-through text-[14px]">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="text-primary text-[15px] font-medium">{{ product.price | money }}</span>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const featuredSection = document.querySelector('#section-{{ section.id }}') || document;

    // Sadece bu bölümdeki veya sayfadaki tüm "Sepete Ekle" formlarını yakala
    featuredSection.addEventListener('submit', function (e) {
      if (e.target.action && e.target.action.includes('/cart/add')) {
        e.preventDefault(); // Sayfa yenilenmesini durdur Mehmet!

        const form = e.target;
        const formData = new FormData(form);
        const submitButton = form.querySelector('[type="submit"]');

        // Butonu bekleme moduna alalım (opsiyonel ama profesyonel durur)
        if (submitButton) submitButton.disabled = true;

        fetch(window.Shopify.routes.root + 'cart/add.js', {
          method: 'POST',
          body: formData,
        })
          .then((response) => response.json())
          .then((item) => {
            // MEHMET: Ürün eklendi! Şimdi senin Cart Drawer'ı tetikleyen fonksiyonları çağırıyoruz.
            // Senin temanın Drawer'ı açma/güncelleme fonksiyonları neyse onları buraya yaz:

            if (typeof updateCartDrawer === 'function') updateCartDrawer();
            if (typeof openCartDrawer === 'function') openCartDrawer();

            // Eğer standart bir tema yapısı kullanıyorsan şu tetikleyiciler de işe yarar:
            document.dispatchEvent(
              new CustomEvent('cart:updated', {
                detail: { cart: item },
              })
            );

            // Çekmeceyi açan tetikleyici (Senin drawer'ın nasıl açılıyorsa o class'ı veya event'i ekle)
            document.querySelector('cart-drawer')?.classList.add('active');
          })
          .catch((error) => {
            console.error('Sepet ekleme hatası:', error);
          })
          .finally(() => {
            if (submitButton) submitButton.disabled = false;
          });
      }
    });
  });
</script>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to Feature"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
