<div class="cotainer">
  <section class="bg-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h4 class="text-primary font-light tracking-widest uppercase">{{ section.settings.section_title }}</h4>
          <p class="text-primary mt-2 text-xs font-ligh uppercase tracking-widest">
            {{ section.settings.section_subtitle }}
          </p>
        </div>
        {% if section.settings.button_url %}
          <a
            href="{{ section.settings.button_url }}"
            class="text-primary border-b border-line pb-1 hover:text-secondary hover:border-secondary transition-all"
          >
            {{- section.settings.button_text -}}
          </a>
        {% endif %}
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-12">
        {% for product in collections[section.settings.collection].products limit: 4 %}
          <div class="group relative product-card-container" data-id="{{ product.id }}">
            <div class="relative aspect-[3/4] overflow-hidden bg-custombg">
              {% if product.compare_at_price > product.price %}
                <span class="absolute top-4 left-4 z-40 bg-secondary text-white font-medium text-[10px] px-2 py-1 tracking-widest uppercase shadow-sm">
                  {{ 'products.product.on_sale' | t }}
                </span>
              {% endif %}

              <div class="absolute top-4 right-4 z-50">
                <button
                  type="button"
                  class="luvia-wishlist-btn w-9 h-9 flex items-center justify-center bg-white/90 backdrop-blur-sm rounded-full shadow-md hover:bg-white transition-all duration-300"
                  onclick="toggleWishlistManually(this, '{{ product.id }}')"
                  data-product-id="{{ product.id }}"
                >
                  <svg
                    class="w-5 h-5 heart-icon pointer-events-none"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l8.78-8.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
                  </svg>
                </button>
              </div>

              <a href="{{ product.url }}" class="block w-full h-full relative z-10">
                <img
                  src="{{ product.featured_image | image_url: width: 700 }}"
                  class="w-full h-full object-cover absolute inset-0 transition-opacity duration-700 {% if product.images[1] %}group-hover:opacity-0{% endif %}"
                  alt="{{ product.title }}"
                  height=""
                  width=""
                >
                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 700 }}"
                    class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                    alt="{{ product.title }}"
                    height=""
                    width=""
                  >
                {% endif %}
              </a>

              <div class="absolute inset-x-0 bottom-0 translate-y-full group-hover:translate-y-0 transition-transform duration-300 z-40">
                <button
                  type="button"
                  onclick="handleAddToCartFeatured(event, '{{ product.selected_or_first_available_variant.id }}')"
                  class="w-full cursor-pointer bg-primary text-white font-medium py-4 text-[11px] uppercase tracking-[0.2em] hover:bg-secondary transition-colors"
                >
                  {% if product.available -%}
                    {{- 'products.product.add_to_cart' | t -}}
                  {%- else -%}
                    {{- 'products.product.sold_out' | t -}}
                  {%- endif %}
                </button>
              </div>
            </div>

            <div class="mt-6 text-center">
              <a href="{{ product.url }}">
                <h3 class="text-secondary text-[16px] font-medium tracking-wide uppercase">{{ product.title }}</h3>
                <div class="mt-2 flex justify-center items-center gap-3">
                  {% if product.compare_at_price > product.price -%}
                    <span class="text-gray-400 line-through text-[13px]">{{ product.compare_at_price | money }}</span>
                  {%- endif %}
                  <span class="text-primary text-[14px] font-medium">{{ product.price | money }}</span>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
</div>

<style>
  /* Favori Aktif Hali */
  .luvia-wishlist-btn.is-active svg {
    fill: #e11d48; /* Kırmızı dolgu */
    stroke: #e11d48;
  }
  .luvia-wishlist-btn:hover {
    transform: scale(1.1);
  }
</style>

<script>
  // Wishlist Fonksiyonu
  function toggleWishlistManually(btn, id) {
    if (window.LuviaWishlist) {
      window.LuviaWishlist.toggle(id);
      btn.classList.toggle('is-active');
    }
  }

  // Sayfa yüklendiğinde favorileri kontrol et
  document.addEventListener('DOMContentLoaded', () => {
    const data = JSON.parse(localStorage.getItem('luvia_wishlist_data') || '[]');
    document.querySelectorAll('.luvia-wishlist-btn').forEach((btn) => {
      if (data.includes(btn.dataset.productId)) {
        btn.classList.add('is-active');
      }
    });
  });

  // Sepete Ekleme Fonksiyonu (Daha önce verdiğim fonksiyonun aynısı)
  function handleAddToCartFeatured(event, variantId) {
    event.preventDefault();
    const btn = event.currentTarget;
    btn.disabled = true;
    btn.innerText = '...';

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: variantId, quantity: 1 }),
    })
      .then((res) => res.json())
      .then((item) => {
        btn.innerText = 'ADDED ✔';
        if (typeof openCartDrawer === 'function') openCartDrawer();
        setTimeout(() => {
          btn.disabled = false;
          btn.innerText = '{{ "products.product.add_to_cart" | t }}';
        }, 2000);
      })
      .catch((err) => {
        btn.innerText = 'ERROR';
        btn.disabled = false;
      });
  }
</script>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "text", "id": "section_title", "label": "Title" },
    { "type": "text", "id": "section_subtitle", "label": "Subtitle" },
    { "type": "text", "id": "button_text", "label": "Button Text" },
    { "type": "url", "id": "button_url", "label": "Button URL" }
  ],
  "presets": [{ "name": "Featured Products" }]
}
{% endschema %}
