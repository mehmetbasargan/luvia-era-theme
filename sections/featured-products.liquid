<div class="cotainer">
  <section class="bg-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h4 class="text-primary font-light tracking-widest uppercase">
            {{ section.settings.section_title }}
          </h4>
          <p class="text-primary mt-2 text-xs font-ligh uppercase tracking-widest">
            {{ section.settings.section_subtitle }}
          </p>
        </div>
        {% if section.settings.button_url %}
          <a
            href="{{ section.settings.button_url }}"
            class="text-primary border-b border-line pb-1 hover:text-secondary hover:border-secondary transition-all"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-12">
        {% for product in collections[section.settings.collection].products limit: 4 %}
          <div class="group relative">
            <div class="relative aspect-[3/4] overflow-hidden bg-custombg">
              {% if product.compare_at_price > product.price %}
                <span class="absolute top-4 left-4 z-20 bg-secondary text-white font-medium text-[12px] px-3 py-1 tracking-widest uppercase">
                  {{ 'products.product.on_sale' | t }}
                </span>
              {% endif %}

              <div class="absolute top-4 right-4 z-50 wishlist-container-fix">
                {% render 'wishlist-heart', product: product %}
              </div>

              <a href="{{ product.url }}" class="block w-full h-full">
                <img
                  src="{{ product.featured_image | image_url: width: 700 }}"
                  height=""
                  width=""
                  class="w-full h-full object-cover absolute inset-0 transition-opacity duration-700 z-0 {% if product.images[1] %}group-hover:opacity-0{% endif %}"
                  alt="{{ product.title }}"
                >

                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 700 }}"
                    height=""
                    width=""
                    class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 z-0"
                    alt="{{ product.title }}"
                  >
                {% endif %}
              </a>

              <div class="absolute inset-x-0 bottom-0 translate-y-full group-hover:translate-y-0 transition-transform duration-300 z-30">
                <button
                  type="button"
                  onclick="handleAddToCartFeatured(event, '{{ product.selected_or_first_available_variant.id }}')"
                  class="w-full cursor-pointer bg-primary text-white font-medium py-4 text-xs uppercase tracking-[0.2em] hover:bg-secondary transition-colors"
                  {% unless product.available %}
                    disabled
                  {% endunless %}
                >
                  {% if product.available %}
                    {{ 'products.product.add_to_cart' | t }}
                  {% else %}
                    {{ 'products.product.sold_out' | t }}
                  {% endif %}
                </button>
              </div>
            </div>

            <div class="mt-6 text-center">
              <a href="{{ product.url }}">
                <h3 class="text-secondary text-[18px] font-medium tracking-wide uppercase">{{ product.title }}</h3>
                <div class="mt-2 flex justify-center items-center gap-3">
                  {% if product.compare_at_price > product.price %}
                    <span class="text-gray-400 line-through text-[14px]">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="text-primary text-[15px] font-medium">{{ product.price | money }}</span>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
</div>

<style>
  /* Wishlist butonunun doğru görünmesi için ekstra koruma */
  .wishlist-container-fix {
    display: block !important;
    min-width: 40px;
    min-height: 40px;
  }
</style>

<script>
  function handleAddToCartFeatured(event, variantId) {
    event.preventDefault();
    const btn = event.currentTarget || event.target;

    btn.disabled = true;
    const originalText = btn.innerText;
    btn.innerText = 'PROCESSING...';

    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest',
      },
      body: JSON.stringify({
        id: variantId,
        quantity: 1,
      }),
    })
      .then((response) => {
        if (!response.ok) throw new Error('Add to cart failed');
        return response.json();
      })
      .then((item) => {
        btn.innerText = 'ADDED ✔';
        showToast('Item added to bag');

        // Drawer fonksiyonlarını çağır
        if (typeof openCartDrawer === 'function') openCartDrawer();
        if (typeof updateCartDrawer === 'function') updateCartDrawer();

        setTimeout(() => {
          btn.disabled = false;
          btn.innerText = originalText;
        }, 2000);
      })
      .catch((error) => {
        btn.innerText = 'ERROR';
        btn.disabled = false;
        console.error('Error adding to cart:', error);
      });
  }

  function openCartDrawer() {
    const drawer = document.getElementById('cart-drawer');
    const overlay = document.getElementById('cart-drawer-overlay');
    const content = document.getElementById('cart-drawer-content');

    if (!drawer) {
      console.warn("Cart drawer ID 'cart-drawer' not found.");
      return;
    }

    drawer.classList.remove('invisible');
    setTimeout(() => {
      overlay?.classList.replace('opacity-0', 'opacity-100');
      content?.classList.replace('translate-x-full', 'translate-x-0');
    }, 10);

    updateCartDrawer();
  }

  function closeCartDrawer() {
    const overlay = document.getElementById('cart-drawer-overlay');
    const content = document.getElementById('cart-drawer-content');
    if (!overlay) return;

    overlay.classList.replace('opacity-100', 'opacity-0');
    content.classList.replace('translate-x-0', 'translate-x-full');

    setTimeout(() => {
      document.getElementById('cart-drawer')?.classList.add('invisible');
    }, 500);
  }

  function updateCartDrawer() {
    fetch('/cart.js')
      .then((res) => res.json())
      .then((cart) => {
        // Baloncukları güncelle
        const cartBubbles = document.querySelectorAll('.cart-count-bubble');
        cartBubbles.forEach((bubble) => {
          bubble.innerText = cart.item_count;
          if (cart.item_count > 0) {
            bubble.classList.remove('hidden');
            bubble.style.display = 'flex';
          } else {
            bubble.classList.add('hidden');
            bubble.style.display = 'none';
          }
        });

        const container = document.getElementById('cart-drawer-items');
        const totalPrice = document.getElementById('cart-total-price');

        if (totalPrice) totalPrice.innerText = (cart.total_price / 100).toFixed(2) + ' TL';
        if (!container) return;

        if (cart.items.length === 0) {
          container.innerHTML =
            '<p class="text-[11px] italic text-gray-400 text-center py-10">{{ "products.product.empty_cart" | t }}</p>';
          return;
        }

        container.innerHTML = cart.items
          .map(
            (item, index) => `
          <div class="flex gap-4 border-b border-gray-50 pb-4 relative">
            <img src="${item.image}" class="w-20 h-24 object-cover bg-custombg">
            <div class="flex flex-col justify-center grow">
              <h4 class="text-[11px] uppercase tracking-wider font-medium">${item.product_title}</h4>
              <p class="text-[10px] text-gray-400 mt-1 italic">${item.variant_title || ''}</p>
              <div class="flex justify-between items-end mt-4">
                <p class="text-[11px]">${item.quantity} QTY</p>
                <p class="text-[11px] font-medium tracking-tighter">${(item.price / 100).toFixed(2)} TL</p>
              </div>
              <button type="button" onclick="removeCartItem(${
                index + 1
              })" class="text-[9px] uppercase tracking-[0.2em] text-red-900 mt-2 text-left hover:text-black transition-all cursor-pointer">
                [ {{ "cart.remove" | t }} ]
              </button>
            </div>
          </div>
        `
          )
          .join('');
      });
  }

  function removeCartItem(line) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ line: line, quantity: 0 }),
    })
      .then((res) => res.json())
      .then(() => {
        showToast('Item removed from bag');
        updateCartDrawer();
      });
  }

  function showToast(message) {
    let container = document.getElementById('toast-container');
    if (!container) {
      container = document.createElement('div');
      container.id = 'toast-container';
      container.className = 'fixed bottom-10 left-1/2 -translate-x-1/2 z-[9999]';
      document.body.appendChild(container);
    }
    const toast = document.createElement('div');
    toast.className = `px-8 py-4 bg-black text-white text-[10px] uppercase tracking-[0.3em] shadow-2xl translate-y-10 opacity-0 transition-all duration-500 ease-out flex items-center justify-center min-w-[250px] mb-2`;
    toast.innerText = message;
    container.appendChild(toast);
    setTimeout(() => {
      toast.classList.replace('translate-y-10', 'translate-y-0');
      toast.classList.replace('opacity-0', 'opacity-100');
    }, 10);
    setTimeout(() => {
      toast.classList.replace('translate-y-0', 'translate-y-10');
      toast.classList.replace('opacity-100', 'opacity-0');
      setTimeout(() => toast.remove(), 500);
    }, 3000);
  }
</script>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to Feature"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
