<div class="cotainer">
  <section class="bg-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h2 class="text-primary font-light tracking-widest uppercase text-xl">
            {{ section.settings.section_title }}
          </h2>
          <p class="text-primary mt-2 text-xs font-light uppercase tracking-widest">
            {{ section.settings.section_subtitle }}
          </p>
        </div>
        {% if section.settings.button_url %}
          <a
            href="{{ section.settings.button_url }}"
            class="text-primary border-b border-line pb-1 hover:text-secondary transition-all text-sm uppercase tracking-widest"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-12">
        {% for product in collections[section.settings.collection].products limit: 4 %}
          <div class="group relative flex flex-col h-full" id="prod-{{ product.id }}">
            <div class="relative aspect-[3/4] overflow-hidden bg-custombg">
              {% if product.compare_at_price > product.price %}
                <span class="absolute top-4 left-4 z-20 bg-secondary text-white font-medium text-[10px] px-2 py-1 tracking-widest uppercase">
                  {{ 'products.product.on_sale' | t }}
                </span>
              {% endif %}

              <div class="absolute top-4 right-4 z-50">
                <button
                  type="button"
                  class="wishlist-trigger-btn w-9 h-9 flex items-center justify-center bg-white rounded-full shadow-md hover:scale-110 transition-transform cursor-pointer border-none"
                  data-product-id="{{ product.id }}"
                >
                  <svg
                    class="w-5 h-5 heart-svg pointer-events-none"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l8.78-8.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
                  </svg>
                </button>
              </div>

              <a href="{{ product.url }}" class="block w-full h-full relative z-10">
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  class="w-full h-full object-cover absolute inset-0 transition-opacity duration-700 {% if product.images[1] %}group-hover:opacity-0{% endif %}"
                  alt="{{ product.title }}"
                  height=""
                  width=""
                >
                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 600 }}"
                    class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                    alt="{{ product.title }}"
                    height=""
                    width=""
                  >
                {% endif %}
              </a>

              <div class="absolute inset-x-0 bottom-0 translate-y-full group-hover:translate-y-0 transition-transform duration-300 z-30">
                <button
                  type="button"
                  onclick="handleAddToCart(event, '{{ product.selected_or_first_available_variant.id }}')"
                  class="w-full bg-primary text-white py-4 text-[10px] uppercase tracking-[0.2em] hover:bg-secondary transition-colors cursor-pointer border-none"
                >
                  {% if product.available -%}
                    {{- 'products.product.add_to_cart' | t -}}
                  {%- else -%}
                    {{- 'products.product.sold_out' | t -}}
                  {%- endif %}
                </button>
              </div>
            </div>

            <div class="mt-4 text-center">
              <a
                href="{{ product.url }}"
                class="text-secondary text-sm font-medium uppercase tracking-wider block mb-1"
              >
                {{- product.title -}}
              </a>
              <div class="flex justify-center items-center gap-2">
                {% if product.compare_at_price > product.price %}
                  <span class="text-gray-400 line-through text-xs">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="text-primary text-sm font-semibold">{{ product.price | money }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
</div>

<style>
  /* Fill heart when favorited */
  .wishlist-trigger-btn.active svg {
    fill: #e11d48 !important;
    stroke: #e11d48 !important;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // 1. Load Favorite States
    const wishlistData = JSON.parse(localStorage.getItem('luvia_wishlist_data') || '[]');

    const updateButtons = () => {
      document.querySelectorAll('.wishlist-trigger-btn').forEach((btn) => {
        if (wishlistData.includes(btn.dataset.productId)) {
          btn.classList.add('active');
        }
      });
    };
    updateButtons();

    // 2. Favorite Click Event (Event Delegation)
    document.addEventListener('click', (e) => {
      const btn = e.target.closest('.wishlist-trigger-btn');
      if (!btn) return;

      e.preventDefault();
      e.stopPropagation();

      const productId = btn.dataset.productId;

      // Simple wishlist toggle
      const wishlistData = JSON.parse(localStorage.getItem('luvia_wishlist_data') || '[]');
      const index = wishlistData.indexOf(productId);

      if (index > -1) {
        wishlistData.splice(index, 1);
        btn.classList.remove('active');
      } else {
        wishlistData.push(productId);
        btn.classList.add('active');
      }

      localStorage.setItem('luvia_wishlist_data', JSON.stringify(wishlistData));

      // Toast notification
      const toast = document.createElement('div');
      toast.className =
        'fixed bottom-5 right-5 bg-primary text-white px-6 py-3 rounded-full shadow-2xl z-[9999] animate-bounce text-[13px] uppercase tracking-widest';
      toast.innerText = index > -1 ? '{{ 'general.removed_from_favorites' | t }}' : '{{ 'general.added_to_favorites' | t }}';
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    });
  });

  // 3. Add to Cart Function
  function handleAddToCart(e, variantId) {
    const btn = e.currentTarget;
    btn.innerText = '...';

    fetch('/cart/add.js?t=' + Date.now(), {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: variantId, quantity: 1 }),
    })
      .then((res) => res.json())
      .then((cartData) => {
        btn.innerText = 'ADDED âœ”';
        if (typeof window.openCartDrawer === 'function') window.openCartDrawer();

        // Update cart drawer content
        console.log('Featured products: Dispatching cart:updated event');
        document.dispatchEvent(new CustomEvent('cart:updated', {
          detail: { cart: cartData },
          bubbles: true
        }));

        setTimeout(() => {
          btn.innerText = '{{ "products.product.add_to_cart" | t }}';
        }, 2000);
      })
      .catch(() => {
        btn.innerText = 'ERROR';
      });
  }
</script>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "text", "id": "section_title", "label": "Title" },
    { "type": "text", "id": "section_subtitle", "label": "Subtitle" },
    { "type": "text", "id": "button_text", "label": "Button Text" },
    { "type": "url", "id": "button_url", "label": "Button URL" }
  ],
  "presets": [{ "name": "Featured Products" }]
}
{% endschema %}
