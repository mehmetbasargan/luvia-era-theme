<section class="bg-custombg py-20 px-6">
  <div class="container">
    <div class="text-center mb-16">
      <h4 class="font-josefin uppercase text-secondary font-light tracking-[0.2em]">
        {{ 'collections.explore_categories' | t }}
      </h4>
      <div class="h-[1px] w-20 bg-secondary mx-auto mt-4"></div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
      {% for block in section.blocks %}
        {%- assign collection = collections[block.settings.collection] -%}

        <div class="group relative flex flex-col items-center">
          <a href="{{ collection.url | default: '#' }}" class="w-full aspect-[2/3] overflow-hidden bg-white relative">
            {% if collection.featured_image != blank %}
              <img
                src="{{ collection.featured_image | image_url: width: 600 }}"
                alt="{{ collection.title }}"
                width="600"
                height="400"
                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
              >
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full bg-[#E5E5E5]' }}
            {% endif %}

            <div
              class="absolute inset-0 bg-[var(--color-primary)]/0 group-hover:bg-[var(--color-primary)]/10 transition-colors duration-500"
            ></div>
          </a>

          <div class="mt-6 text-center">
            <h6 class="text-primary tracking-widest uppercase mb-2">
              {% if collection.title != blank %}
                {{ collection.title }}
              {% else %}
                Select Collection
              {% endif %}
            </h6>
            <a
              href="{{ collection.url }}"
              class="text-[10px] md:text-xs text-secondary border-b border-secondary pb-1 uppercase tracking-widest hover:text-primary hover:border-primary transition-all"
            >
              {{ 'collections.review' | t }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Cards",
  "max_blocks": 4,
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection Select"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Cards",
      "blocks": [{ "type": "collection" }, { "type": "collection" }, { "type": "collection" }, { "type": "collection" }]
    }
  ]
}
{% endschema %}
