<footer class="bg-custom-bg] text-[#F9F9F9] pt-16 pb-8 px-6">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-12">
    <div class="flex flex-col space-y-6">
      <div>
        <a href="/" class="block">
          {% if section.settings.footer_logo != blank %}
            {%- assign logo_alt = section.settings.footer_logo.alt | default: shop.name -%}
            {{
              section.settings.footer_logo
              | image_url: width: 200
              | image_tag: class: 'h-8 w-auto object-contain', alt: logo_alt
            }}
          {% else %}
            <span class="text-2xl font-light tracking-[0.2em] uppercase text-white">
              Luvia <span class="font-semibold text-[#B2AC88]">Era</span>
            </span>
          {% endif %}
        </a>

        <p class="mt-4 text-sm text-gray-300 leading-relaxed font-light">
          {{ section.settings.footer_description }}
        </p>
      </div>

      <div class="space-y-2 text-sm text-gray-400">
        <p class="flex items-center gap-2"><span class="text-[#B2AC88]">Address:</span> Nişantaşı, İstanbul / TR</p>
        <p class="flex items-center gap-2"><span class="text-[#B2AC88]">Email:</span> hello@luviaera.com</p>
      </div>
    </div>

    <div>
      <h4 class="text-sm font-semibold uppercase tracking-widest mb-6 text-[#B2AC88]">Collections</h4>
      <ul class="space-y-4 text-sm font-light text-gray-300">
        <li><a href="/collections/new-in" class="hover:text-white transition">New In</a></li>
        <li><a href="/collections/dresses" class="hover:text-white transition">Dresses</a></li>
        <li><a href="/collections/knitwear" class="hover:text-white transition">Knitwear</a></li>
        <li><a href="/collections/accessories" class="hover:text-white transition">Accessories</a></li>
      </ul>
    </div>

    <div>
      <h4 class="text-sm font-semibold uppercase tracking-widest mb-6 text-[#B2AC88]">Customer Care</h4>
      <ul class="space-y-4 text-sm font-light text-gray-300">
        <li><a href="/pages/our-story" class="hover:text-white transition">Our Story</a></li>
        <li><a href="/pages/shipping-returns" class="hover:text-white transition">Shipping & Returns</a></li>
        <li><a href="/pages/size-guide" class="hover:text-white transition">Size Guide</a></li>
        <li><a href="/pages/contact" class="hover:text-white transition">Contact Us</a></li>
      </ul>
    </div>

    <div>
      <h4 class="text-sm font-semibold uppercase tracking-widest mb-6 text-[#B2AC88]">Newsletter</h4>
      <p class="text-xs text-gray-400 mb-4 font-light italic">Be the first to know about new eras.</p>
      <form class="flex border-b border-gray-600 pb-2">
        <input
          type="email"
          placeholder="Email address"
          class="bg-transparent border-none text-sm w-full focus:outline-none placeholder:text-gray-600 text-white"
        >
        <button type="submit" class="text-[#B2AC88] uppercase text-xs tracking-widest font-semibold ml-2">Join</button>
      </form>
    </div>
  </div>
</footer>

<div class="bg-custom-bg py-4 text-center border-t border-[#d1d1d1]">
  <div class="container">
    <div class="footer__copyright text-[12px]">
      &copy;
      {{ 'now' | date: '%Y' }}
      {{ shop.name | link_to: routes.root_url }} - All rights reserved
    </div>

    <div class="footer__links">
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url }}
      {% endfor %}
    </div>

    <div class="footer__payment">
      {% if section.settings.show_payment_icons %}
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<button
  id="back-to-top"
  class="fixed bottom-8 right-8 z-100 bg-brand hover:bg-brand-dark text-white p-3 rounded-full shadow-2xl transition-all duration-500 transform translate-y-20 opacity-0 hover:scale-110 active:scale-95 cursor-pointer"
  aria-label="Yukarı Çık"
>
  {% render 'icon-arrow' %}
</button>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Logo Görseli"
    },
    {
      "type": "text",
      "id": "footer_description",
      "label": "Kısa Açıklama",
      "default": "Defining your essence through timeless designs."
    },
    {
      "type": "text",
      "id": "footer_address",
      "label": "Adres",
      "default": "Nişantaşı, İstanbul / TR"
    },
    {
      "type": "text",
      "id": "footer_email",
      "label": "E-posta",
      "default": "hello@luviaera.com"
    }
  ]
}
{% endschema %}
