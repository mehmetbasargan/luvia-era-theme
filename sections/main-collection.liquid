<div class="collection-container max-w-[1440px] mx-auto px-4 md:px-10 py-12">
  <div class="flex flex-col md:flex-row gap-12">
    <aside class="w-full md:w-64 flex-shrink-0">
      <div class="filter-wrapper sticky top-24">
        <h2 class="text-[11px] uppercase tracking-[0.3em] font-medium mb-8">Filters</h2>

        <form id="CollectionFiltersForm" class="space-y-8">
          {%- for filter in collection.filters -%}
            <div class="filter-group border-b border-gray-100 pb-6">
              <h3 class="text-[10px] uppercase tracking-widest text-gray-400 mb-4">{{ filter.label }}</h3>

              <div class="filter-options space-y-2">
                {%- case filter.type -%}
                  {%- when 'list', 'boolean' -%}
                    {%- for value in filter.values -%}
                      <label class="flex items-center gap-3 cursor-pointer group">
                        <input
                          type="checkbox"
                          name="{{ value.param_name }}"
                          value="{{ value.value }}"
                          {% if value.active %}
                            checked
                          {% endif %}
                          {% if value.count == 0 and value.active == false %}
                            disabled
                          {% endif %}
                          class="w-3 h-3 border-gray-300 focus:ring-0 checked:bg-black"
                        >
                        <span class="text-[11px] uppercase tracking-tighter {% if value.count == 0 %}text-gray-300{% endif %}">
                          {{ value.label }}
                          <span class="text-[9px] text-gray-400">({{ value.count }})</span>
                        </span>
                      </label>
                    {%- endfor -%}

                  {%- when 'price_range' -%}
                    <div class="flex items-center gap-2">
                      <input
                        name="{{ filter.min_value.param_name }}"
                        placeholder="Min"
                        class="w-full border p-2 text-[10px]"
                      >
                      <input
                        name="{{ filter.max_value.param_name }}"
                        placeholder="Max"
                        class="w-full border p-2 text-[10px]"
                      >
                    </div>
                {%- endcase -%}
              </div>
            </div>
          {%- endfor -%}

          <div class="pt-4">
            <a
              href="{{ collection.url }}?sort_by={{ collection.sort_by }}"
              class="text-[9px] uppercase underline tracking-widest"
              >Clear All</a
            >
          </div>
        </form>
      </div>
    </aside>

    <main id="ProductGridContainer" class="flex-grow">
      <div class="grid grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-12">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% else %}
          <p class="text-center py-20 text-[11px] uppercase tracking-widest">No products found.</p>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="pagination mt-20 flex justify-center border-t pt-10">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    </main>
  </div>
</div>

{% schema %}
{
  "name": "Collection Page",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 12
    }
  ]
}
{% endschema %}
