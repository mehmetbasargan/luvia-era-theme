<section class="max-w-[1440px] mx-auto px-4 md:px-10 py-12">
  <div class="flex flex-col lg:flex-row gap-12 lg:gap-10">
    {% comment %} Slider Section {% endcomment %}
    <div class="w-full md:w-full lg:w-2/3 flex flex-row gap-6 h-[600px] lg:h-[800px]">
      {% comment %} thumbnails {% endcomment %}
      <div class="hidden md:block w-20 shrink-0">
        <div class="swiper product-thumbs h-full">
          <div class="swiper-wrapper ">
            {% for media in product.media %}
              <div class="swiper-slide cursor-pointer opacity-50 transition-opacity duration-300 [&.swiper-slide-thumb-active]:opacity-100">
                {{ media | image_url: width: 200 | image_tag: class: ' object-cover' }}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>

      {% comment %} main images {% endcomment %}
      <div class="grow h-full overflow-hidden bg-[#F9F9F9]">
        <div class="swiper product-main h-full">
          <div class="swiper-wrapper h-full">
            {% for media in product.media %}
              <div class="swiper-slide h-full">
                {{
                  media
                  | image_url: width: 1500
                  | image_tag: class: 'w-full h-full object-cover object-top', loading: 'eager'
                }}
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-next text-[#3B443C] !after:text-lg"></div>
          <div class="swiper-button-prev text-[#3B443C] !after:text-lg"></div>
        </div>
      </div>
    </div>

    {% comment %} Product Info Section {% endcomment %}
    <div class="w-full md:w-[100%] lg:w-100">
      <div class="sticky top-10 space-y-8">
        <div class="space-y-2">
          <p class="text-secondary text-[14px] tracking-[0.3em] uppercase">Luvia Era Edition</p>
          <h1 class="text-primary text-3xl font-light tracking-widest uppercase">{{ product.title }}</h1>
          <p class="text-lg text-primary font-light italic">{{ product.price | money }}</p>
        </div>

        <div class="h-1 w-full bg-gray-100"></div>

        {% form 'product', product, id: 'product-form', class: 'space-y-6', onsubmit: 'handleAddToCart(event)' %}
          {% comment %}
            ID kısmını dinamik yapalım.
            Eğer ürünün tek varyantı varsa onu alır, çok varyantı varsa seçili olanı alır.
          {% endcomment %}
          <input type="hidden" name="id" id="variant-id" value="{{ product.selected_or_first_available_variant.id }}">

          {% comment %} Varyant Seçenekleri (Renk vb.) {% endcomment %}
          {% unless product.has_only_default_variant %}
            <div class="product-options space-y-4">
              {% for option in product.options_with_values %}
                <div class="option-wrapper">
                  <label class="text-[12px] uppercase tracking-widest text-secondary mb-3 block">
                    {{- option.name -}}
                  </label>
                  <div class="flex flex-wrap gap-2">
                    {% for value in option.values %}
                      <button
                        type="button"
                        class="variant-selector border border-gray-200 px-4 py-2 text-[11px] uppercase tracking-widest transition-all hover:border-[#3B443C] {% if option.selected_value == value %} border-[#3B443C] bg-[#3B443C] text-white {% endif %}"
                        data-value="{{ value }}"
                        data-option-index="{{ forloop.parentloop.index0 }}"
                      >
                        {{ value }}
                      </button>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endunless %}

          <div class="pt-4">
            <button
              type="submit"
              name="add"
              class="w-full bg-[#3B443C] text-white py-4 uppercase tracking-[0.3em] hover:bg-[#2A312B] transition-colors"
            >
              Sepete Ekle
            </button>
          </div>
        {% endform %}

        <div class="pt-10">
          <div class="prose prose-sm text-pr font-light leading-relaxed">
            {{ product.description }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .product-thumbs .swiper-slide {
    height: 120px !important; /* Küçük resimlerin yüksekliği */
    width: 100% !important;
    margin-bottom: 10px; /* Aradaki boşluk */
    display: flex;
  }
  .product-thumbs {
    padding-right: 0px; /* Ana görselle çok bitişmesin */
  }

  .swiper-button-next,
  .swiper-button-prev {
    align-items: center;
    color: #3b443c;
    cursor: pointer;
    display: flex;
    height: var(--swiper-navigation-size);
    justify-content: center;
    position: absolute;
    width: var(--swiper-navigation-size);
    z-index: 10;
  }

  .swiper-button-next,
  .swiper-button-prev {
    height: 50px !important;
    width: 50px !important;
    background: #ffffff60;
    border-radius: 50%;
    padding: 15px;
  }
</style>

{% schema %}
{
  "name": "Ürün Detayı",
  "settings": [],
  "presets": [{ "name": "Varsayılan Ürün" }]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // 1. Küçük resimler slider'ı
    const thumbsSwiper = new Swiper('.product-thumbs', {
      direction: 'vertical',
      slidesPerView: 'auto',
      spaceBetween: 10,
      freeMode: true,
      watchSlidesProgress: true,
      loop: true,
    });

    // 2. Ana slider
    const mainSwiper = new Swiper('.product-main', {
      spaceBetween: 0,
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      thumbs: {
        swiper: thumbsSwiper,
      },
    });
  });

  /* form */
  function handleAddToCart(event) {
    // 1. KURAL: Sayfanın yönlenmesini (linkin değişmesini) anında durdur
    event.preventDefault();
    event.stopPropagation();

    console.log('JS yakaladı! Sayfa artık değişmeyecek.');

    const form = event.target;
    const formData = new FormData(form);

    // Butonu bekleme moduna al
    const btn = form.querySelector('[name="add"]');
    btn.disabled = true;
    btn.innerText = 'İŞLENİYOR...';

    // 2. KURAL: Shopify'ın kendi API'sine gönder
    fetch('/cart/add.js', {
      method: 'POST',
      body: formData,
      headers: { 'X-Requested-With': 'XMLHttpRequest' },
    })
      .then((response) => {
        if (!response.ok) throw new Error('Varyant ID hatası veya stok yok');
        return response.json();
      })
      .then((item) => {
        btn.innerText = 'EKLENDİ ✔';
        console.log('Başarı!', item);
        alert('Ürün sepete eklendi!'); // Şimdilik alert kalsın, çalıştığını görelim

        setTimeout(() => {
          btn.disabled = false;
          btn.innerText = 'SEPETE EKLE';
        }, 2000);
      })
      .catch((error) => {
        console.error('Hata detayı:', error);
        btn.innerText = 'HATA: ID GEÇERSİZ';
        btn.disabled = false;
      });

    return false; // Ekstra güvenlik
  }
</script>
