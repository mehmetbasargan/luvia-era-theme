<section class="max-w-[1440px] mx-auto px-4 md:px-10 py-12">
  <div class="flex flex-col lg:flex-row gap-12 lg:gap-10">
    {% comment %} Slider Section {% endcomment %}
    <div class="w-full md:w-full lg:w-2/3 flex flex-row gap-6 h-[600px] lg:h-[800px]">
      {% comment %} thumbnails {% endcomment %}
      <div class="hidden md:block w-20 shrink-0">
        <div class="swiper product-thumbs h-full">
          <div class="swiper-wrapper ">
            {% for media in product.media %}
              <div class="swiper-slide cursor-pointer opacity-50 transition-opacity duration-300 [&.swiper-slide-thumb-active]:opacity-100">
                {{ media | image_url: width: 200 | image_tag: class: ' object-cover' }}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>

      {% comment %} main images {% endcomment %}
      <div class="grow h-full overflow-hidden bg-[#F9F9F9]">
        <div class="swiper product-main h-full">
          <div class="swiper-wrapper h-full">
            {% for media in product.media %}
              <div class="swiper-slide h-full">
                {{
                  media
                  | image_url: width: 1500
                  | image_tag: class: 'w-full h-full object-cover object-top', loading: 'eager'
                }}
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-next text-[#3B443C] !after:text-lg"></div>
          <div class="swiper-button-prev text-[#3B443C] !after:text-lg"></div>
        </div>
      </div>
    </div>

    {% comment %} Product Info Section {% endcomment %}
    <div class="w-full md:w-[100%] lg:w-[100%]">
      <div class="sticky top-10 space-y-8">
        <div class="space-y-2">
          <p class="text-secondary text-[14px] tracking-[0.3em] uppercase">Luvia Era Edition</p>
          <h1 class="text-primary text-3xl font-light tracking-widest uppercase">{{ product.title }}</h1>
          <p class="text-lg text-primary font-light italic">{{ product.price | money }}</p>
        </div>

        <div class="h-1 w-full bg-gray-100"></div>

        {% form 'product', product, id: 'product-form', class: 'space-y-6', onsubmit: 'handleAddToCart(event)' %}
          {% comment %}
            ID kısmını dinamik yapalım.
            Eğer ürünün tek varyantı varsa onu alır, çok varyantı varsa seçili olanı alır.
          {% endcomment %}
          <input type="hidden" name="id" id="variant-id" value="{{ product.selected_or_first_available_variant.id }}">

          {% comment %} Varyant Seçenekleri (Renk vb.) {% endcomment %}
          {% unless product.has_only_default_variant %}
            <div class="product-options space-y-6 py-6 border-y border-gray-100">
              {% for option in product.options_with_values %}
                <div class="option-wrapper">
                  <label class="text-[11px] uppercase tracking-[0.2em] text-secondary mb-3 block">
                    {{ option.name }}
                  </label>
                  <div class="flex flex-wrap gap-3">
                    {% for value in option.values %}
                      <button
                        type="button"
                        class="variant-btn border border-gray-200 px-6 py-2 text-[11px] uppercase tracking-widest transition-all hover:border-black {% if option.selected_value == value %} border-black bg-black text-white {% endif %}"
                        data-option-index="{{ option.position }}"
                        data-value="{{ value | escape }}"
                      >
                        {{ value }}
                      </button>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endunless %}

          {% comment %} Tüm varyantların ID'lerini ve eşleşmelerini tutan gizli bir JSON (JS kullanacak) {% endcomment %}
          <script id="product-variants-json" type="application/json">
            {{ product.variants | json }}
          </script>

          <div class="pt-4">
            <button
              type="submit"
              name="add"
              class="w-full bg-[#3B443C] text-white py-4 uppercase tracking-[0.3em] hover:bg-[#2A312B] transition-colors"
            >
              Sepete Ekle
            </button>
          </div>
        {% endform %}

        <div class="pt-10">
          <div class="prose prose-sm text-pr font-light leading-relaxed">
            {{ product.description }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .product-thumbs .swiper-slide {
    height: 120px !important; /* Küçük resimlerin yüksekliği */
    width: 100% !important;
    margin-bottom: 10px; /* Aradaki boşluk */
    display: flex;
  }
  .product-thumbs {
    padding-right: 0px; /* Ana görselle çok bitişmesin */
  }

  .swiper-button-next,
  .swiper-button-prev {
    align-items: center;
    color: #3b443c;
    cursor: pointer;
    display: flex;
    height: var(--swiper-navigation-size);
    justify-content: center;
    position: absolute;
    width: var(--swiper-navigation-size);
    z-index: 10;
  }

  .swiper-button-next,
  .swiper-button-prev {
    height: 50px !important;
    width: 50px !important;
    background: #ffffff60;
    border-radius: 50%;
    padding: 15px;
  }

  #toast-container div {
    backdrop-filter: blur(5px);
    background-color: rgba(0, 0, 0, 0.85);
  }
</style>

{% schema %}
{
  "name": "Ürün Detayı",
  "settings": [],
  "presets": [{ "name": "Varsayılan Ürün" }]
}
{% endschema %}

<script>
  // Sayfa yüklendiğinde Swiper'ları başlat
  document.addEventListener('DOMContentLoaded', function () {
    const thumbsSwiper = new Swiper('.product-thumbs', {
      direction: 'vertical',
      slidesPerView: 'auto',
      spaceBetween: 10,
      freeMode: true,
      watchSlidesProgress: true,
      loop: true,
    });

    const mainSwiper = new Swiper('.product-main', {
      spaceBetween: 0,
      loop: true,
      navigation: { nextEl: '.swiper-button-next', prevEl: '.swiper-button-prev' },
      thumbs: { swiper: thumbsSwiper },
    });
  });

  // --- SEPET ÇEKMECESİ FONKSİYONLARI ---
  function openCartDrawer() {
    const drawer = document.getElementById('cart-drawer');
    const overlay = document.getElementById('cart-drawer-overlay');
    const content = document.getElementById('cart-drawer-content');

    if (!drawer) {
      console.error("Sepet çekmecesi HTML'de bulunamadı!");
      return;
    }

    drawer.classList.remove('invisible');
    setTimeout(() => {
      overlay.classList.replace('opacity-0', 'opacity-100');
      content.classList.replace('translate-x-full', 'translate-x-0');
    }, 10);

    updateCartDrawer(); // İçeriği tazele
  }

  function closeCartDrawer() {
    const overlay = document.getElementById('cart-drawer-overlay');
    const content = document.getElementById('cart-drawer-content');

    overlay.classList.replace('opacity-100', 'opacity-0');
    content.classList.replace('translate-x-0', 'translate-x-full');

    setTimeout(() => {
      document.getElementById('cart-drawer').classList.add('invisible');
    }, 500);
  }

  // Sepet Çekmecesini Güncelleyen Ana Fonksiyon
  function updateCartDrawer() {
    fetch(window.Shopify.routes.root + 'cart.js')
      .then((res) => res.json())
      .then((cart) => {
        // --- HEADER SAYACINI GÜNCELLEME (KESİN ÇÖZÜM) ---
        const cartBubbles = document.querySelectorAll('.cart-count-bubble');

        cartBubbles.forEach((bubble) => {
          bubble.innerText = cart.item_count; // Sayıyı yaz

          if (cart.item_count > 0) {
            bubble.classList.remove('hidden'); // Görünür yap
            bubble.style.display = 'flex'; // Tailwind kullanmıyorsan garantiye al

            bubble.animate([{ transform: 'scale(1)' }, { transform: 'scale(1.3)' }, { transform: 'scale(1)' }], {
              duration: 300,
              easing: 'ease-in-out',
            });
          } else {
            bubble.classList.add('hidden'); // Gizle
            bubble.style.display = 'none';
          }
        });

        // 2. SEPET ÇEKMECESİNİ GÜNCELLE
        const container = document.getElementById('cart-drawer-items');
        const totalPrice = document.getElementById('cart-total-price');

        if (totalPrice) totalPrice.innerText = (cart.total_price / 100).toFixed(2) + ' TL';

        if (cart.items.length === 0) {
          container.innerHTML = '<p class="text-[11px] italic text-gray-400 text-center py-10">Sepetiniz boş.</p>';
          return;
        }

        container.innerHTML = cart.items
          .map(
            (item, index) => `
        <div class="flex gap-4 border-b border-gray-50 pb-4 relative">
          <img src="${item.image}" class="w-20 h-24 object-cover bg-[#F9F9F9]">
          <div class="flex flex-col justify-center grow">
            <h4 class="text-[11px] uppercase tracking-wider font-medium">${item.product_title}</h4>
            <p class="text-[10px] text-gray-400 mt-1 italic">${item.variant_title || ''}</p>
            <div class="flex justify-between items-end mt-4">
              <p class="text-[11px]">${item.quantity} Adet</p>
              <p class="text-[11px] font-medium tracking-tighter">${(item.price / 100).toFixed(2)} TL</p>
            </div>
            <button type="button" 
              onclick="removeCartItem(${index + 1})" 
              class="text-[9px] uppercase tracking-[0.2em] text-red-900 mt-2 text-left hover:text-black transition-all cursor-pointer">
              [ Kaldır ]
            </button>
          </div>
        </div>
      `
          )
          .join('');
      });
    showToast('Item added to bag');
  }

  // Ürünü Satır Numarasına Göre Silme Fonksiyonu
  function removeCartItem(line) {
    const btn = event.target;
    btn.innerText = 'SİLİNİYOR...';

    fetch(window.Shopify.routes.root + 'cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ line: line, quantity: 0 }),
    })
      .then((res) => res.json())
      .then((cart) => {
        updateCartDrawer(); // Hem çekmeceyi hem de sayacı tazeler
      })
      .catch((err) => console.error('Silme hatası:', err));
    showToast('Item removed from bag');
  }

  /* --- VARYANT SEÇİMİ --- */
  document.addEventListener('DOMContentLoaded', function () {
    const variantButtons = document.querySelectorAll('.variant-btn');
    const variantIdInput = document.getElementById('variant-id');
    const variants = JSON.parse(document.getElementById('product-variants-json').innerHTML);

    variantButtons.forEach((btn) => {
      btn.addEventListener('click', function () {
        // Aktif buton stilini değiştir
        const parent = this.closest('.flex');
        parent.querySelectorAll('.variant-btn').forEach((b) => {
          b.classList.remove('bg-black', 'text-white', 'border-black');
        });
        this.classList.add('bg-black', 'text-white', 'border-black');

        // Seçili değerleri topla
        let selectedOptions = [];
        document.querySelectorAll('.variant-btn.bg-black').forEach((activeBtn) => {
          selectedOptions.push(activeBtn.getAttribute('data-value'));
        });

        // Eşleşen varyantı bul
        const matchedVariant = variants.find((v) => {
          return v.options.every((opt, index) => selectedOptions.includes(opt));
        });

        if (matchedVariant) {
          variantIdInput.value = matchedVariant.id;
          console.log('Yeni Varyant Seçildi ID:', matchedVariant.id);

          // Fiyatı da güncelleyelim (Eleganlık detayda gizlidir)
          const priceElement = document.querySelector('.product-price'); // Fiyat class'ın neyse
          if (priceElement) {
            priceElement.innerText = (matchedVariant.price / 100).toFixed(2) + ' TL';
          }
        }
      });
    });
  });

  // --- SEPETE EKLEME (ANA FONKSİYON) ---
  function handleAddToCart(event) {
    event.preventDefault();
    event.stopPropagation();

    const form = event.target;
    const formData = new FormData(form);
    const btn = form.querySelector('[name="add"]');

    btn.disabled = true;
    btn.innerText = 'İŞLENİYOR...';

    fetch('/cart/add.js', {
      method: 'POST',
      body: formData,
      headers: { 'X-Requested-With': 'XMLHttpRequest' },
    })
      .then((response) => {
        if (!response.ok) throw new Error('Ekleme başarısız');
        return response.json();
      })
      .then((item) => {
        btn.innerText = 'EKLENDİ ✔';

        // İŞTE KRİTİK NOKTA: Fonksiyonu burada çağırıyoruz!
        openCartDrawer();

        setTimeout(() => {
          btn.disabled = false;
          btn.innerText = 'SEPETE EKLE';
        }, 2000);
      })
      .catch((error) => {
        console.error('Hata:', error);
        btn.innerText = 'HATA OLUŞTU';
        btn.disabled = false;
      });

    return false;
    /* showToast('Item added to bag'); */
  }

  function showToast(message, type = 'success') {
    const container = document.getElementById('toast-container');
    const toast = document.createElement('div');

    // Stil ayarları (Luvia Era Minimalizmi)
    toast.className = `
    px-8 py-4 bg-black text-white text-[10px] uppercase tracking-[0.3em] shadow-2xl
    translate-y-10 opacity-0 transition-all duration-500 ease-out flex items-center justify-center min-w-[250px]
  `;

    toast.innerText = message;
    container.appendChild(toast);

    // Animasyonla göster
    setTimeout(() => {
      toast.classList.replace('translate-y-10', 'translate-y-0');
      toast.classList.replace('opacity-0', 'opacity-100');
    }, 10);

    // 3 saniye sonra kaldır
    setTimeout(() => {
      toast.classList.replace('translate-y-0', 'translate-y-10');
      toast.classList.replace('opacity-100', 'opacity-0');
      setTimeout(() => toast.remove(), 500);
    }, 3000);
  }
</script>
