<div class="max-w-[1440px] mx-auto px-4 md:px-20 py-20 lg:py-32">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
    <div class="space-y-8 animate-fadeIn">
      <h2 class="text-[10px] uppercase tracking-[0.5em] text-gray-400 font-light italic">
        {{ section.settings.since }}
      </h2>
      <h3 class="text-3xl md:text-5xl font-light leading-tight tracking-tight text-primary uppercase">
        {{ section.settings.heading | default: 'Crafting Timeless Elegance' }}
      </h3>
      <div class="text-sm md:text-base text-secondary leading-relaxed font-light max-w-lg">
        {{
          section.settings.text
          | default: 'Luvia Era was born from a desire to blend modern minimalism with artisan craftsmanship.'
        }}
      </div>
    </div>

    <div class="relative group overflow-hidden bg-[#F9F9F9]">
      {% if section.settings.image %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          height=""
          width=""
          class="w-full h-[600px] object-cover grayscale hover:grayscale-0 transition-all duration-1000"
        >
      {% else %}
        <div class="w-full h-[600px] bg-gray-100 flex items-center justify-center italic text-gray-300 tracking-widest uppercase">
          <img
            src="{{ 'collection-1' | placeholder_svg_tag: 'w-full h-full bg-[#E5E5E5]' }}"
            height=""
            width=""
            alt="{{ section.settings.heading }}"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Brand Story",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Philosophy"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Focusing on the essence of style.</p>"
    },
    {
      "type": "text",
      "id": "since",
      "label": "Since",
      "default": "2026"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Story Image"
    }
  ]
}
{% endschema %}
