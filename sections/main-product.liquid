<section class="max-w-[1440px] mx-auto px-4 md:px-10 py-12">
  <div class="flex flex-col lg:flex-row gap-16">
    <div class="w-full md:w-full lg:w-2/3 flex flex-row gap-6 h-[600px] lg:h-[800px]">
      {% comment %} thumbnails {% endcomment %}
      <div class="hidden md:block w-20 shrink-0">
        <div class="swiper product-thumbs h-full">
          <div class="swiper-wrapper ">
            {% for media in product.media %}
              <div class="swiper-slide cursor-pointer opacity-50 transition-opacity duration-300 [&.swiper-slide-thumb-active]:opacity-100">
                {{ media | image_url: width: 200 | image_tag: class: ' object-cover' }}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>

      {% comment %} main images {% endcomment %}
      <div class="grow h-full overflow-hidden bg-[#F9F9F9]">
        <div class="swiper product-main h-full">
          <div class="swiper-wrapper h-full">
            {% for media in product.media %}
              <div class="swiper-slide h-full">
                {{
                  media
                  | image_url: width: 1500
                  | image_tag: class: 'w-full h-full object-cover object-top', loading: 'eager'
                }}
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-next text-[#3B443C] !after:text-lg"></div>
          <div class="swiper-button-prev text-[#3B443C] !after:text-lg"></div>
        </div>
      </div>
    </div>

    <div class="lg:w-2/5">
      <div class="sticky top-24 space-y-8">
        <div>
          <h1 class="text-2xl font-light tracking-tight text-[#3B443C] uppercase">{{ product.title }}</h1>
          <div class="mt-4 flex items-center gap-4">
            <span class="text-xl font-medium text-[#3B443C]">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="text-gray-400 line-through text-sm">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>
        </div>

        <div class="prose prose-sm text-gray-500 leading-relaxed max-w-none">
          {{ product.description }}
        </div>

        {%- unless product.has_only_default_variant -%}
          <div class="product-variants space-y-6 py-8 border-y border-gray-100 my-8">
            {%- for option in product.options_with_values -%}
              <div class="variant-wrapper">
                <label class="text-[10px] uppercase tracking-[0.2em] text-gray-400 mb-4 block">
                  {{ option.name }}:
                  <span id="option-value-{{ forloop.index }}" class="text-black font-medium">
                    {{- option.selected_value -}}
                  </span>
                </label>

                <div class="flex flex-wrap gap-3">
                  {%- for value in option.values -%}
                    <label class="cursor-pointer">
                      <input
                        type="radio"
                        name="{{ option.name }}"
                        value="{{ value | escape }}"
                        {% if option.selected_value == value %}
                          checked
                        {% endif %}
                        class="sr-only peer"
                      >

                      {%- if option.name == 'Renk' or option.name == 'Color' -%}
                        <span
                          class="block w-8 h-8 rounded-full border border-gray-200 ring-offset-2 ring-black peer-checked:ring-1 transition-all"
                          style="background-color: {{ value | handle }};"
                        >
                        </span>
                      {%- else -%}
                        <span class="min-w-[45px] h-[45px] flex items-center justify-center border border-gray-200 text-[11px] uppercase tracking-widest peer-checked:border-black peer-checked:bg-black peer-checked:text-white transition-all px-4">
                          {{ value }}
                        </span>
                      {%- endif -%}
                    </label>
                  {%- endfor -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
        {%- endunless -%}

        <div class="product-form-container mt-8">
          {%- form 'product', product -%}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

            <div class="flex flex-col gap-4">
              <button
                type="submit"
                name="add"
                class="w-full bg-[#3B443C] text-white py-5 text-[11px] uppercase tracking-[0.3em] hover:bg-black transition-all {% unless product.available %}opacity-50 cursor-not-allowed{% endunless %}"
                {% unless product.available %}
                  disabled
                {% endunless %}
              >
                {% if product.available %}
                  {{ 'cart.add_to_cart' | t }}
                {% else %}
                  {{ 'cart.sold_out' | t }}
                {% endif %}
              </button>
            </div>
          {%- endform -%}
        </div>

        <div class="pt-8 border-t border-gray-100 space-y-4">
          <details class="group">
            <summary class="flex justify-between items-center cursor-pointer list-none text-[10px] uppercase tracking-widest text-[#3B443C]">
              {{ 'products.product.details_title' | t }}
              <span class="group-open:rotate-180 transition-transform">↓</span>
            </summary>
            <div class="pt-4 text-xs text-gray-500 leading-6">
              {{ product.metafields.custom.product_details | newline_to_br }}
            </div>
          </details>
          <details class="group">
            <summary class="flex justify-between items-center cursor-pointer list-none text-[10px] uppercase tracking-widest text-[#3B443C]">
              {{ 'products.product.shipping_title' | t }}
              <span class="group-open:rotate-180 transition-transform">↓</span>
            </summary>
            <div class="pt-4 text-xs text-gray-500 leading-6">
              {{ product.metafields.custom.shipping_returns | newline_to_br }}
            </div>
          </details>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .product-thumbs .swiper-slide {
    height: 120px !important;
    width: 100% !important;
    margin-bottom: 10px;
    display: flex;
  }
  .product-thumbs {
    padding-right: 0px;
  }
  .swiper-button-next,
  .swiper-button-prev {
    height: 50px !important;
    width: 50px !important;
    background: #ffffff60;
    border-radius: 50%;
    padding: 15px;
    color: #3b443c;
    z-index: 10;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // 1. Swiper Kurulumu
    if (document.querySelector('.product-thumbs')) {
      const thumbsSwiper = new Swiper('.product-thumbs', {
        direction: 'vertical',
        slidesPerView: 'auto',
        spaceBetween: 10,
        freeMode: true,
        watchSlidesProgress: true,
      });
      const mainSwiper = new Swiper('.product-main', {
        spaceBetween: 0,
        navigation: { nextEl: '.swiper-button-next', prevEl: '.swiper-button-prev' },
        thumbs: { swiper: thumbsSwiper },
      });
    }

    // 2. Sepete Ekleme (AJAX)
    const productForm = document.querySelector('form[action="/cart/add"]');
    if (productForm) {
      productForm.addEventListener('submit', function (e) {
        e.preventDefault();
        let formData = new FormData(productForm);
        fetch('/cart/add.js', { method: 'POST', body: formData })
          .then((response) => response.json())
          .then(() => {
            openAndRefreshCart();
          })
          .catch((error) => console.error('Sepet Hatası:', error));
      });
    }
  });

  /* ddddd */
  // Varyant değiştiğinde ismi güncelleme
document.querySelectorAll('.variant-wrapper').forEach((wrapper, index) => {
  const labelSpan = document.getElementById(`option-value-${index + 1}`);
  const inputs = wrapper.querySelectorAll('input[type="radio"]');

  inputs.forEach(input => {
    input.addEventListener('change', (e) => {
      // Tıklanan inputun değerini yukarıdaki span'a yaz
      labelSpan.textContent = e.target.value;
      
      // OPSİYONEL: Burada istersen fiyatı veya görseli de güncelleyebilirsin
      updateVariantID(); 
    });
  });
});

// Formun içindeki gizli Input ID'sini güncelleme (Sepete doğru varyantın gitmesi için)
function updateVariantID() {
  const selectedOptions = Array.from(document.querySelectorAll('input[type="radio"]:checked')).map(input => input.value);
  const variantData = {{ product.variants | json }};
  
  const matchedVariant = variantData.find(variant => {
    return variant.options.every((option, index) => option === selectedOptions[index]);
  });

  if (matchedVariant) {
    document.querySelector('input[name="id"]').value = matchedVariant.id;
    // Fiyatı da güncellemek istersen:
    // document.querySelector('.text-xl.font-medium').textContent = Shopify.formatMoney(matchedVariant.price);
  }
}

  // 3. Sepet Çekmecesini Güncelleme ve Açma
  function openAndRefreshCart() {
    fetch('/cart.js')
      .then((res) => res.json())
      .then((cart) => {
        const itemsContainer = document.getElementById('cart-drawer-items');
        const totalPriceContainer = document.getElementById('cart-total-price');

        if (cart.items.length > 0) {
          // MAP fonksiyonu içinde "Kaldır" butonunu ekledik (onclick="removeCartItem")
          itemsContainer.innerHTML = cart.items
            .map(
              (item, index) => `
                <div class="flex gap-4 border-b border-gray-50 pb-4">
                    <img src="${item.image}" class="w-20 h-24 object-cover">
                    <div class="flex-1">
                      <div class="flex justify-between">
                        <h4 class="text-[10px] uppercase tracking-widest text-[#3B443C]">${item.product_title}</h4>
                        <button onclick="removeCartItem(${
                          index + 1
                        })" class="text-[9px] text-gray-400 hover:text-black uppercase underline">${ "{{ 'cart.remove' | t }}" }</button>
                      </div>
                      <p class="text-[10px] text-gray-400 mt-1">${item.variant_title || ''}</p>
                      <p class="text-xs mt-2 font-medium">${(item.price / 100).toFixed(2)} TL</p>
                    </div>
                </div>
            `
            )
            .join('');
        } else {
          itemsContainer.innerHTML =
            '<p class="text-[10px] uppercase tracking-widest text-center mt-10 text-gray-400">${ "{{ 'products.product.empty_cart' | t }}" }</p>';
        }

        totalPriceContainer.innerText = (cart.total_price / 100).toFixed(2) + ' TL';

        // Çekmeceyi Açma Animasyonu
        const drawer = document.getElementById('cart-drawer');
        const overlay = document.getElementById('cart-drawer-overlay');
        const content = document.getElementById('cart-drawer-content');
        drawer.classList.remove('invisible');
        setTimeout(() => {
          overlay.classList.replace('opacity-0', 'opacity-100');
          content.classList.replace('translate-x-full', 'translate-x-0');
        }, 10);
      });
  }

  // 4. SEPETTEN ÜRÜN SİLME FONKSİYONU
  function removeCartItem(line) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ line: line, quantity: 0 }),
    })
      .then((res) => res.json())
      .then(() => {
        openAndRefreshCart(); // Listeyi tazele
      })
      .catch((err) => console.error('Silme hatası:', err));
  }

  function closeCartDrawer() {
    const drawer = document.getElementById('cart-drawer');
    const overlay = document.getElementById('cart-drawer-overlay');
    const content = document.getElementById('cart-drawer-content');
    overlay.classList.replace('opacity-100', 'opacity-0');
    content.classList.replace('translate-x-0', 'translate-x-full');
    setTimeout(() => {
      drawer.classList.add('invisible');
    }, 500);
  }
</script>

