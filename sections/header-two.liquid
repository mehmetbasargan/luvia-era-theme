<header class="">
  {% comment %} logo {% endcomment %}
  <div class="container">
    <div class="w-full h-[80px] py-5 items-center justify-center md:justify-between flex">
      <div class="hidden md:flex">
        {% if section.settings.show_phone and section.settings.header_phone != blank %}
          <ul class="flex items-center gap-2">
            <li>{% render 'icon-phone' %}</li>
            <li class="font-medium">
              <a href="{{ section.settings.header_phone | replace: ' ', '' }}"> {{ section.settings.header_phone }}</a>
            </li>
          </ul>
        {% endif %}
      </div>
      <div class="">
        <a href="{{ routes.root_url }}" class=" w-[140px] lg:w-[180px] shrink-0">
          {% if section.settings.logo %}
            {{ section.settings.logo | image_url: width: 180 | image_tag: alt: shop.name }}
          {% else %}
            <span class="h2">{{ shop.name }}</span>
          {% endif %}
        </a>
      </div>
      {% comment %} Social Media Icons {% endcomment %}
      <div class="hidden md:flex">
        <ul class="flex items-center gap-2">
          {%- for block in section.blocks -%}
            {%- if block.type == 'social_icon' -%}
              <li
                class="bg-custom-bg p-2 rounded-full hover:bg-brand hover:text-white transition-colors"
                {{ block.shopify_attributes }}
              >
                <a
                  href="{{ block.settings.link | default: '#' }}"
                  target="_blank"
                  class="block w-5 h-5 flex items-center justify-center"
                >
                  {%- case block.settings.icon_choice -%}
                    {%- when 'icon-facebook' -%}
                      {% render 'icon-facebook' %}
                    {%- when 'icon-instagram' -%}
                      {% render 'icon-instagram' %}
                    {%- when 'icon-youtube' -%}
                      {% render 'icon-youtube' %}
                    {%- when 'icon-x' -%}
                      {% render 'icon-x' %}
                    {%- when 'icon-tiktok' -%}
                      {% render 'icon-tiktok' %}
                  {%- endcase -%}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>

  {% comment %} menu {% endcomment %}
  <div class=" bg-custom-bg h-[70px] flex items-center relative">
    <div class="container flex lg:justify-between justify-end items-center w-full">
      <nav class="">
        <ul class="hidden lg:flex flex-row items-center justify-between gap-6 ">
          {% for link in section.settings.menu.links %}
            <li>
              <a href="{{ link.url }}" class="nav-link hover:text-brand {% if link.current %} is-active {% endif %}">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <div class="flex items-center lg:gap-2 gap-8 justify-start w-full lg:w-auto">
        <div class="flex lg:hidden">
          <button id="menu-toggle" class="group relative order-last">
            <div id="icon-open" class="block">
              {% render 'icon-menu' %}
            </div>

            <div id="icon-close" class="hidden">
              {% render 'icon-menu-close' %}
            </div>
          </button>

          {% comment %} mobile menu {% endcomment %}
          <nav id="main-menu" class="hidden absolute top-[70px] left-0 bg-custom-bg z-40 w-full lg:w-0">
            <div class="flex flex-col p-4 w-full">
              {% for link in section.settings.menu.links %}
                <a
                  href="{{ link.url }}"
                  class="nav-link py-5 border-b border-[#000000]/10 last:border-b-0 w-full {% if link.current %} is-active {% endif %}"
                >
                  {{ link.title }}
                </a>
              {% endfor %}
            </div>
          </nav>
        </div>

        <div class="order-first flex flex-row justify-start gap-7 w-full lg:w-auto">
          <a href="{{ routes.search_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
            {% render 'icon-search' %}
          </a>
          <a href="{{ routes.account_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
            {% if shop.customer_accounts_enabled %}
              {% render 'icon-account' | inline_asset_content | link_to: routes.account_url %}
            {% endif %}
          </a>
          <a href="{{ routes.cart_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
            {% if cart.item_count > 0 %}
              <sup>{{ cart.item_count }}</sup>
            {% endif %}
            {% render 'icon-cart' %}
          </a>
        </div>
      </div>
    </div>
  </div>

  {% comment %} deneme menu {% endcomment %}
  <nav class="hidden md:flex items-center gap-6">
    {%- for link in section.settings.menu.links -%}
      {%- if link.links != blank -%}
        {%- # ALT MENÜSÜ OLAN BAŞLIK (Örn: Hakkımızda) -%}
        <div class="relative group h-full flex items-center">
          <button class="flex items-center gap-1 font-medium hover:text-brand transition-colors py-4">
            {{ link.title }}
            <svg
              class="w-4 h-4 transition-transform group-hover:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          {%- # DROPDOWN KUTUSU -%}
          <ul
            class="
              absolute top-full left-0 w-52 bg-black shadow-xl border border-gray-100 rounded-lg py-3
              opacity-0 invisible translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0
              transition-all duration-300
            "
          >
            {%- for childlink in link.links -%}
              <li>
                <a
                  href="{{ childlink.url }}"
                  class="block px-5 py-2 text-sm text-white hover:bg-gray-50 hover:text-brand transition-colors"
                >
                  {{ childlink.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </div>

      {%- else -%}
        {%- # DÜZ LİNK (Alt menüsü olmayanlar) -%}
        <a href="{{ link.url }}" class="font-medium hover:text-brand transition-colors py-4">
          {{ link.title }}
        </a>
      {%- endif -%}
    {%- endfor -%}
  </nav>
  {% comment %} deneme menu {% endcomment %}
</header>

<style>
  #shopify-section-{{ section.id }} {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: white;
  }
</style>

{% schema %}
{
  "name": "Header Two",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "header_phone",
      "label": "Telefon Numarası",
      "placeholder": "+90 5XX XXX XX XX"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Telefonu Göster",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "social_icon",
      "name": "Sosyal Medya İkonu",
      "settings": [
        {
          "type": "select",
          "id": "icon_choice",
          "label": "İkon Seçin",
          "options": [
            { "value": "icon-facebook", "label": "Facebook" },
            { "value": "icon-instagram", "label": "Instagram" },
            { "value": "icon-youtube", "label": "YouTube" },
            { "value": "icon-x", "label": "X" },
            { "value": "icon-tiktok", "label": "TikTok" }
          ],
          "default": "icon-instagram"
        },
        {
          "type": "url",
          "id": "link",
          "label": "İkon Linki"
        }
      ]
    }
  ]
}
{% endschema %}
