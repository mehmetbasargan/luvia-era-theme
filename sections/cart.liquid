{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

{% comment %}
  <div class="max-w-[1440px] mx-auto px-4 md:px-10 py-20">
    <h1 class="text-2xl font-light tracking-[0.3em] uppercase mb-12 text-center text-primary">Your Shopping Bag</h1>

    {% if cart.item_count > 0 %}
      <form action="/cart" method="post" class="flex flex-col lg:flex-row gap-16">
        <div class="w-full lg:w-2/3 space-y-8">
          {% for item in cart.items %}
            <div class="flex gap-6 pb-8 border-b border-gray-300 items-center animate-fadeIn">
              <a href="{{ item.url }}" class="w-24 h-32 shrink-0 bg-[#F9F9F9] overflow-hidden">
                <img
                  src="{{ item.image | image_url: width: 300 }}"
                  width=""
                  height=""
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                >
              </a>
              <div class="grow space-y-1">
                <h3 class="text-sm uppercase tracking-widest text-primary">{{ item.product.title }}</h3>
                <p class="text-[10px] text-secondary uppercase tracking-wider font-light">{{ item.variant.title }}</p>
                <div class="pt-4 flex items-center justify-between gap-6">
                  <p class="text-sm italic font-light">{{ item.final_line_price | money }}</p>
                  <a
                    href="{{ item.url_to_remove }}"
                    class="text-[9px] uppercase tracking-widest text-red-900 border-b border-red-900 pb-0.5 hover:text-black hover:border-black transition-colors"
                    >Remove</a
                  >
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="w-full lg:w-1/3 bg-[#F9F9F9] p-10 h-fit space-y-8">
          <h2 class="text-[13px] uppercase tracking-[0.3em] font-medium border-b border-gray-200 pb-4 text-primary">
            Order Summary
          </h2>

          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="font-light tracking-widest uppercase text-[14px] text-secondary">Subtotal</span>
              <span class="text-sm tracking-tighter">{{ cart.total_price | money }}</span>
            </div>
            <p class="text-[12px] text-gray-400 italic leading-relaxed">Shipping and taxes are calculated at checkout.</p>
          </div>

          <button
            type="submit"
            name="checkout"
            class="w-full cursor-pointer bg-primary text-white py-5 text-[11px] uppercase tracking-[0.3em] hover:bg-secondary transition-all duration-300 shadow-sm"
          >
            Proceed to Checkout
          </button>
        </div>
      </form>
    {% else %}
      <div class="text-center py-32 space-y-8">
        <p class="italic text-secondary font-light tracking-widest">Your bag is currently empty.</p>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="inline-block border border-secondary text-secondary bg-white px-12 py-4 uppercase tracking-[0.3em] text-[10px] hover:bg-secondary hover:text-white transition-all duration-500"
        >
          Continue Shopping
        </a>
      </div>
    {% endif %}
  </div>
{% endcomment %}

<div class="max-w-[1440px] mx-auto px-4 md:px-10 py-16 lg:py-24">
  <header class="text-center mb-16">
    <h1 class="text-[22px] md:text-[28px] font-light tracking-[0.4em] uppercase text-primary">Your Shopping Bag</h1>
  </header>

  {% if cart.item_count > 0 %}
    <form action="/cart" method="post" novalidate class="flex flex-col lg:flex-row gap-16">
      <div class="w-full lg:w-2/3">
        <div class="border-t border-gray-100">
          {% for item in cart.items %}
            <div class="flex flex-col md:flex-row gap-6 py-8 border-b border-gray-300 items-start md:items-center animate-fadeIn">
              <div class="w-28 h-36 shrink-0 bg-[#F9F9F9] overflow-hidden">
                <a href="{{ item.url }}">
                  <img
                    src="{{ item.image | image_url: width: 400 }}"
                    alt="{{ item.title | escape }}"
                    width=""
                    height=""
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                    loading="lazy"
                  >
                </a>
              </div>

              <div class="grow space-y-2">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="text-[12px] md:text-[13px] uppercase tracking-[0.2em] font-medium">
                      <a href="{{ item.url }}">{{ item.product.title }}</a>
                    </h3>
                    {% unless item.product.has_only_default_variant %}
                      <p class="text-[10px] text-gray-400 uppercase tracking-widest mt-1 italic">
                        {{ item.variant.title }}
                      </p>
                    {% endunless %}
                  </div>
                  <p class="text-[13px] font-light italic">{{ item.final_line_price | money }}</p>
                </div>

                <div class="flex justify-between items-center pt-6 w-full">
                  <div class="flex items-center border border-gray-200">
                    <a
                      href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity={{ item.quantity | minus: 1 }}"
                      class="px-3 py-1 text-xs hover:bg-gray-50 transition-colors"
                      >-</a
                    >

                    <input
                      type="number"
                      name="updates[]"
                      value="{{ item.quantity }}"
                      readOnly
                      class="w-8 text-center text-[11px] border-none focus:ring-0 cursor-default"
                      aria-label="Quantity"
                    >

                    <a
                      href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity={{ item.quantity | plus: 1 }}"
                      class="px-3 py-1 text-xs hover:bg-gray-50 transition-colors"
                      >+</a
                    >
                  </div>

                  <a
                    href="{{ item.url_to_remove }}"
                    class="text-[9px] uppercase tracking-[0.3em] text-red-900 border-b border-red-900 pb-0.5 hover:text-black hover:border-black transition-colors"
                  >
                    Remove
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="mt-8">
          <a
            href="{{ routes.all_products_collection_url }}"
            class="text-[10px] uppercase tracking-[0.3em] border-b border-black pb-1 hover:opacity-50 transition-all"
          >
            ‚Üê Continue Shopping
          </a>
        </div>
      </div>

      <div class="w-full lg:w-1/3">
        <div class="bg-[#FBFBFB] p-8 md:p-10 space-y-8 sticky top-10">
          <h2 class="text-[13px] uppercase tracking-[0.3em] font-medium border-b border-gray-100 pb-6">
            Order Summary
          </h2>

          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-[11px] uppercase tracking-widest text-gray-500 font-light">Subtotal</span>
              <span class="text-sm tracking-tight font-medium">{{ cart.total_price | money }}</span>
            </div>
            <p class="text-[10px] text-gray-400 italic leading-relaxed">
              Shipping, taxes, and discounts will be calculated at checkout.
            </p>
          </div>

          <div class="pt-4">
            <button
              type="submit"
              name="checkout"
              class="w-full bg-[#3B443C] text-white py-5 text-[11px] uppercase tracking-[0.4em] hover:bg-black transition-all duration-500 shadow-sm"
            >
              Proceed to Checkout
            </button>
          </div>

          <div class="flex justify-center gap-4 opacity-30 grayscale pt-4">
            <small class="text-[8px] uppercase tracking-widest">Secure Payment Guaranteed</small>
          </div>
        </div>
      </div>
    </form>
  {% else %}
    <div class="text-center py-32 animate-fadeIn">
      <p class="text-[13px] italic text-gray-400 mb-10 tracking-widest font-light">
        Your shopping bag is currently empty.
      </p>
      <a
        href="{{ routes.all_products_collection_url }}"
        class="inline-block bg-black text-white px-12 py-5 uppercase tracking-[0.3em] text-[10px] hover:bg-gray-800 transition-all duration-500"
      >
        Discover Our Collection
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
