{% paginate blog.articles by 10 %}
  <div class="main-blog-section py-12 px-4 max-w-7xl mx-auto">
    <header class="text-center mb-16">
      <h3 class="font-light uppercase tracking-widest">{{ blog.title }}</h3>
      <p class="text-primary mt-2">{{ 'blog.explore_stories' | t }}</p>
    </header>

    <div class="flex justify-center gap-4 mb-10 overflow-x-auto pb-4">
      <a
        href="{{ blog.url }}"
        class="px-4 py-2 rounded-md border border-primary hover:bg-secondary hover:text-white transition {% if current_tags == blank %}bg-primary text-white{% endif %}"
      >
        {{- 'blog.all_posts' | t -}}
      </a>
      {% for tag in blog.all_tags %}
        <a
          href="{{ blog.url }}/tagged/{{ tag | handle }}"
          class="px-4 py-2 rounded-md border border-primary hover:bg-primary hover:text-white transition {% if current_tags contains tag %}bg-primary text-white{% endif %}"
        >
          {{ tag }}
        </a>
      {% endfor %}
    </div>

    {% if blog.articles.size > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {% for article in blog.articles %}
          <article class="blog-post-card group">
            {% if article.image %}
              <a href="{{ article.url }}" class="block overflow-hidden mb-4 aspect-[16/10]">
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.title }}"
                  height=""
                  width=""
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                >
              </a>
            {% endif %}

            <div class="content space-y-3">
              <span class="text-sm font-bold text-secondary tracking-wider">
                {{- article.published_at | date: '%B %d, %Y' -}}
              </span>
              <h5 class="font-light uppercase leading-tight group-hover:text-primary transition-colors">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h5>
              <p class="text-primary line-clamp-3">
                {{ article.excerpt_or_content | strip_html | truncate: 150 }}
              </p>
              <a
                href="{{ article.url }}"
                class="inline-block pt-2 font-medium text-sm hover:underline text-secondary transition-all uppercase"
              >
                {{ 'blog.read_more' | t }}
              </a>
            </div>
          </article>
        {% endfor %}
      </div>

      {% comment %} Pagination {% endcomment %}
      {% if paginate.pages > 1 %}
        <nav class="mt-16 flex justify-center items-center space-x-4 border-t border-line pt-10" role="navigation">
          {% if paginate.previous %}
            <a
              href="{{ paginate.previous.url }}"
              class="group flex items-center font-medium text-sm text-primary hover:text-secondary transition-colors uppercase"
            >
              <span class="mr-2">←</span> {{ 'blog.pagination.previous' | t }}
            </a>
          {% endif %}

          <div class="flex items-center space-x-2">
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a
                  href="{{ part.url }}"
                  class="w-5 h-5 flex items-center justify-center rounded-full text-sm font-medium text-primary"
                >
                  {{ part.title }}
                </a>
              {% else %}
                {% if part.title == paginate.current_page %}
                  <span class="w-5 h-5 flex items-center justify-center text-primary text-md font-bold border-b-2 border-primary">
                    {{ part.title }}
                  </span>
                {% else %}
                  <span class="w-5 h-5 flex items-center justify-center text-primary">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>

          {% if paginate.next %}
            <a
              href="{{ paginate.next.url }}"
              class="group flex items-center font-medium text-sm text-primary hover:text-secondary transition-colors uppercase"
            >
              {{ 'blog.pagination.next' | t }}
              <span class="ml-2">→</span>
            </a>
          {% endif %}
        </nav>
      {% endif %}

    {% else %}
      <div class="text-center py-20 bg-custombg rounded-lg">
        <p class="text-xl text-primary">
          {{ 'blog.no_posts_found' | t: blog_title: blog.title }}
        </p>
        <a href="/admin/articles/new" class="mt-4 inline-block bg-primary text-white px-6 py-2 rounded">
          {{ 'blog.create_post' | t }}
        </a>
      </div>
    {% endif %}
  </div>
{% endpaginate %}

{% schema %}
{
  "name": "Main Blog Page",
  "settings": [
    {
      "type": "text",
      "id": "blog_title",
      "label": "Blog Page Title",
      "default": "Latest Stories"
    }
  ],
  "presets": [
    {
      "name": "Main Blog Page"
    }
  ]
}
{% endschema %}
