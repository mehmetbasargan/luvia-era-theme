{% paginate blog.articles by 12 %}
  <div class="main-blog-section py-12 px-4 max-w-7xl mx-auto">
    <header class="text-center mb-16">
      <h1 class="text-4xl font-light uppercase tracking-widest">{{ blog.title }}</h1>
      <p class="text-gray-500 mt-2">Explore our latest stories and updates</p>
    </header>

    {% if blog.articles.size > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {% for article in blog.articles %}
          <article class="blog-post-card group">
            {% if article.image %}
              <a href="{{ article.url }}" class="block overflow-hidden rounded-lg mb-4 aspect-[16/10]">
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.title }}"
                  height=""
                  width=""
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                >
              </a>
            {% endif %}

            <div class="content space-y-3">
              <span class="text-xs font-bold text-secondary uppercase">
                {{- article.published_at | date: '%B %d, %Y' -}}
              </span>
              <h2 class="text-2xl font-medium leading-tight group-hover:text-primary transition-colors">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h2>
              <p class="text-gray-600 line-clamp-3 text-sm">
                {{ article.excerpt_or_content | strip_html | truncate: 150 }}
              </p>
              <a
                href="{{ article.url }}"
                class="inline-block pt-2 font-bold text-sm border-b-2 border-black hover:border-secondary transition-all uppercase"
              >
                Read More
              </a>
            </div>
          </article>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="mt-12 flex justify-center border-t pt-8">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}

    {% else %}
      <div class="text-center py-20 bg-gray-50 rounded-lg">
        <p class="text-xl text-gray-500 italic">
          No blog posts found in "{{ blog.title }}". Please add some posts in your admin panel.
        </p>
        <a href="/admin/articles/new" class="mt-4 inline-block bg-black text-white px-6 py-2 rounded">Create a Post</a>
      </div>
    {% endif %}
  </div>
{% endpaginate %}

{% schema %}
{
  "name": "Main Blog Page",
  "settings": [
    {
      "type": "text",
      "id": "blog_title",
      "label": "Blog Page Title",
      "default": "Latest Stories"
    }
  ],
  "presets": [
    {
      "name": "Main Blog Page"
    }
  ]
}
{% endschema %}
