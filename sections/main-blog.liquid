{% paginate blog.articles by 1 %}
  <div class="main-blog-section py-12 px-4 max-w-7xl mx-auto">
    <header class="text-center mb-16">
      <h3 class="font-light uppercase tracking-widest">{{ blog.title }}</h3>
      <p class="text-primary mt-2">Explore our latest stories and updates</p>
    </header>

    <div class="flex justify-center gap-4 mb-10 overflow-x-auto pb-4">
      <a
        href="{{ blog.url }}"
        class="px-4 py-2 rounded-md border border-primary hover:bg-secondary hover:text-white transition {% if current_tags == blank %}bg-primary text-white{% endif %}"
      >
        All Posts
      </a>
      {% for tag in blog.all_tags %}
        <a
          href="{{ blog.url }}/tagged/{{ tag | handle }}"
          class="px-4 py-2 rounded-md border border-primary hover:bg-primary hover:text-white transition {% if current_tags contains tag %}bg-primary text-white{% endif %}"
        >
          {{ tag }}
        </a>
      {% endfor %}
    </div>

    {% if blog.articles.size > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {% for article in blog.articles %}
          <article class="blog-post-card group">
            {% if article.image %}
              <a href="{{ article.url }}" class="block overflow-hidden mb-4 aspect-[16/10]">
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.title }}"
                  height=""
                  width=""
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                >
              </a>
            {% endif %}

            <div class="content space-y-3">
              <span class="text-sm font-bold text-secondary tracking-wider">
                {{- article.published_at | date: '%B %d, %Y' -}}
              </span>
              <h5 class="font-light uppercase leading-tight group-hover:text-primary transition-colors text-xl">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h5>
              <p class="text-primary line-clamp-3">{{ article.excerpt_or_content | strip_html | truncate: 150 }}</p>
              <a
                href="{{ article.url }}"
                class="inline-block pt-2 font-medium text-sm hover:underline text-secondary transition-all uppercase"
              >
                Read More
              </a>
            </div>
          </article>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <nav class="mt-16 flex justify-center items-center space-x-6 border-t border-gray-100 pt-10" role="navigation">
          {% if paginate.previous %}
            <a
              href="{{ paginate.previous.url }}"
              class="flex items-center font-medium text-sm text-primary hover:text-secondary transition-colors uppercase"
            >
              <span class="mr-2">←</span> Previous
            </a>
          {% endif %}

          <div class="flex items-center space-x-4">
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="text-sm font-medium text-gray-400 hover:text-primary">
                  {{ part.title }}
                </a>
              {% else %}
                {% if part.title == paginate.current_page %}
                  <span class="text-md font-bold text-primary border-b-2 border-primary pb-1">
                    {{ part.title }}
                  </span>
                {% else %}
                  <span class="text-gray-300">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>

          {% if paginate.next %}
            <a
              href="{{ paginate.next.url }}"
              class="flex items-center font-medium text-sm text-primary hover:text-secondary transition-colors uppercase"
            >
              Next <span class="ml-2">→</span>
            </a>
          {% endif %}
        </nav>
      {% endif %}

    {% else %}
      <div class="text-center py-20 bg-gray-50 rounded-lg">
        <p class="text-xl text-primary italic">No posts found in "{{ blog.title }}"</p>
        <a href="/admin/articles/new" class="mt-4 inline-block bg-primary text-white px-6 py-2 rounded"
          >Create a Post</a
        >
      </div>
    {% endif %}
  </div>
{% endpaginate %}

{% schema %}
{
  "name": "Main Blog Page",
  "settings": [
    {
      "type": "text",
      "id": "blog_title",
      "label": "Blog Page Title",
      "default": "Latest Stories"
    }
  ],
  "presets": [
    {
      "name": "Main Blog Page"
    }
  ]
}
{% endschema %}
