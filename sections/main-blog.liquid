<section class="max-w-7xl mx-auto px-4 py-12">
  <h1 class="text-4xl font-light text-center mb-12 uppercase tracking-widest">{{ blog.title }}</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for article in blog.articles %}
      <article class="group">
        <a href="{{ article.url }}" class="block overflow-hidden rounded-lg aspect-[16/10] mb-4">
          {% if article.image %}
            <img
              src="{{ article.image | image_url: width: 800 }}"
              alt="{{ article.title }}"
              height=""
              width=""
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            >
          {% endif %}
        </a>
        <div class="space-y-2">
          <span class="text-xs text-gray-500 uppercase tracking-tighter">
            {{- article.published_at | date: '%d %b %Y' -}}
          </span>
          <h2 class="text-xl font-medium group-hover:text-secondary transition-colors">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </h2>
          <p class="text-gray-600 line-clamp-2 text-sm">
            {{ article.excerpt_or_content | strip_html | truncate: 120 }}
          </p>
          <a href="{{ article.url }}" class="inline-block pt-2 text-sm font-bold border-b-2 border-primary"
            >READ MORE</a
          >
        </div>
      </article>
    {% endfor %}
  </div>
</section>
