<header class="bg-custom-bg w-full relative">
  <div class="container mx-auto flex flex-row items-center justify-between h-[100px]">
    <a href="{{ routes.root_url }}" class=" w-[140px] lg:w-[150px] shrink-0">
      {% if section.settings.logo %}
        {{ section.settings.logo | image_url: width: 150 | image_tag: alt: shop.name }}
      {% else %}
        <span class="h2">{{ shop.name }}</span>
      {% endif %}
    </a>

    <div class="flex flex-row items-center gap-2 lg:gap-10">
      {% comment %} menu {% endcomment %}

      <div class="hidden lg:flex flex-row items-center gap-6">
        {% for link in section.settings.menu.links %}
          {{ link.title | link_to: link.url }}
        {% endfor %}
      </div>

      <div class="flex lg:hidden">
        <button id="menu-toggle" class="group relative">
          <div id="icon-open" class="block">
            {% render 'icon-menu' %}
          </div>

          <div id="icon-close" class="hidden">
            {% render 'icon-menu-close' %}
          </div>
        </button>

        {% comment %} mobile menu {% endcomment %}
        <nav id="main-menu" class="hidden absolute top-[100px] left-0 w-full bg-custom-bg z-40 ">
          <div class="flex flex-col p-4 w-full">
            {% for link in section.settings.menu.links %}
              {{ link.title | link_to: link.url, class: 'py-5 border-b border-[#000000]/10 last:border-b-0' }}
            {% endfor %}
          </div>
        </nav>
      </div>

      <div class="flex flex-row items-center justify-center gap-2 bg-black/10 py-2 px-4 rounded-full">
        <a href="{{ routes.search_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
          {% render 'icon-search' %}
        </a>
        <a href="{{ routes.account_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
          {% if shop.customer_accounts_enabled %}
            {% render 'icon-account' | inline_asset_content | link_to: routes.account_url %}
          {% endif %}
        </a>
        <a href="{{ routes.cart_url }}" class="lg:w-[30px] w-[20px] text-black hover:text-brand">
          {% if cart.item_count > 0 %}
            <sup>{{ cart.item_count }}</sup>
          {% endif %}
          {% render 'icon-cart' %}
        </a>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
