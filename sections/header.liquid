<div class="hidden lg:flex bg-custom-bg border-b border-[#000000]/10 py-2">
  <div class="container">
    <div class="flex flex-row items-center justify-between">
      <div class="">
        <div class="hidden lg:flex">
          {% if section.settings.show_phone and section.settings.header_phone != blank %}
            <ul class="flex items-center gap-2">
              <li>{% render 'icon-phone' %}</li>
              <li class="font-medium">
                <a href="{{ section.settings.header_phone | replace: ' ', '' }}">
                  {{ section.settings.header_phone -}}
                </a>
              </li>
            </ul>
          {% endif %}
        </div>
      </div>
      <div class="">
        {% comment %} Social Media Icons {% endcomment %}
        <div class="hidden lg:flex">
          <ul class="flex items-center gap-2">
            {%- for block in section.blocks -%}
              {%- if block.type == 'social_icon' -%}
                <li
                  class="p-2 bg-secondary hover:bg-primary text-white hover:text-white transition-colors rounded-full"
                  {{ block.shopify_attributes }}
                >
                  <a
                    href="{{ block.settings.link | default: '#' }}"
                    target="_blank"
                    class=""
                  >
                    {%- case block.settings.icon_choice -%}
                      {%- when 'icon-facebook' -%}
                        {% render 'icon-facebook' %}
                      {%- when 'icon-instagram' -%}
                        {% render 'icon-instagram' %}
                      {%- when 'icon-youtube' -%}
                        {% render 'icon-youtube' %}
                      {%- when 'icon-x' -%}
                        {% render 'icon-x' %}
                      {%- when 'icon-tiktok' -%}
                        {% render 'icon-tiktok' %}
                    {%- endcase -%}
                  </a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<header class="bg-custom-bg w-full relative py-5 md:py-0">
  <div class="container mx-auto flex md:flex-row flex-col items-center justify-between h-[100px]">
    <a href="{{ routes.root_url }}" class=" w-[160px] lg:w-[180px] shrink-0">
      {% if section.settings.logo %}
        {{ section.settings.logo | image_url: width: 180 | image_tag: alt: shop.name }}
      {% else %}
        <span class="h2">{{ shop.name }}</span>
      {% endif %}
    </a>

    <div class="w-full flex justify-between gap-6 md:justify-end! md:w-auto">
      {% comment %} menu {% endcomment %}
      <nav class="hidden lg:flex flex-row items-center ">
        <ul class="hidden lg:flex flex-row items-center justify-between gap-3 ">
          {% for link in section.settings.menu.links %}
            <li>
              <a
                href="{{ link.url }}"
                class="nav-link hover:text-secondary {% if link.current %} is-active {% endif %}"
              >
                {{- link.title -}}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <div class="flex lg:hidden">
        <button id="menu-toggle" class="group relative">
          <div id="icon-open" class="block">
            {% render 'icon-menu' %}
          </div>

          <div id="icon-close" class="hidden">
            {% render 'icon-menu-close' %}
          </div>
        </button>

        {% comment %} mobile menu {% endcomment %}
        <nav id="main-menu" class="hidden absolute top-[500px] left-0 w-full bg-custom-bg z-40 ">
          <div class="flex flex-col p-4 w-full">
            {% for link in section.settings.menu.links %}
              <a
                href="{{ link.url }}"
                class="nav-link py-5 border-b border-[#000000]/10 last:border-b-0 hover:text-secondary  {% if link.current %} is-active {% endif %}"
              >
                {{ link.title }}
              </a>
            {% endfor %}
          </div>
        </nav>
      </div>

      <div class="flex flex-row items-center justify-center gap-2">
        <div class="bg-black/10 p-2 rounded-full hover:bg-secondary">
          <a href="{{ routes.account_url }}" class="lg:w-[30px] w-[20px] text-black">
            {% render 'icon-search' %}
          </a>
        </div>
        <div class="bg-black/10 p-2 rounded-full hover:bg-secondary">
          <a href="{{ routes.account_url }}" class="lg:w-[30px] w-[20px] text-black ">
            {% if shop.customer_accounts_enabled %}
              {% render 'icon-account' | inline_asset_content | link_to: routes.account_url %}
            {% endif %}
          </a>
        </div>
        <div class="bg-black/10 p-2 rounded-full hover:bg-secondary relative">
          <a href="{{ routes.cart_url }}" class="lg:w-[30px] w-[20px] text-black">
            <div class="absolute top-[-10px] right-0">
              <span class="cart-count-bubble bg-gray-200 w-[20px] h-[20px] flex items-center justify-center text-primary text-xs rounded-full">
                {{- cart.item_count -}}
              </span>
            </div>
            {% render 'icon-cart' %}
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  #shopify-section-{{ section.id }} {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: white;
  }
</style>

{% schema %}
{
  "name": "header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "header_phone",
      "label": "Phone Number",
      "placeholder": "+90 5XX XXX XX XX"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Show Phone",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "social_icon",
      "name": "Social Media Icon",
      "settings": [
        {
          "type": "select",
          "id": "icon_choice",
          "label": "Select Icon",
          "options": [
            { "value": "icon-facebook", "label": "Facebook" },
            { "value": "icon-instagram", "label": "Instagram" },
            { "value": "icon-youtube", "label": "YouTube" },
            { "value": "icon-x", "label": "X" },
            { "value": "icon-tiktok", "label": "TikTok" }
          ],
          "default": "icon-instagram"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Social Media Icon Link"
        }
      ]
    }
  ]
}
{% endschema %}
