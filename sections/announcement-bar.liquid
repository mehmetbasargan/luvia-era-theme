<div class="overflow-hidden py-2" style="background-color: {{ section.settings.bg_color }};">
  <div class="whitespace-nowrap animate-marquee inline-block" style="color: {{ section.settings.text_color }};">
    {{ section.settings.announcement_text }}
  </div>
</div>

{% schema %}
{
  "name": "Duyuru Barı",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Duyuru Metni",
      "default": "Büyük İndirimi Kaçırmayın!"
    },
    {
      "type": "text",
      "id": "text_color",
      "label": "Metin Rengi",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Arka Plan Rengi",
      "default": "#1d4ed8"
    }
  ]
}
{% endschema %}
